<header id="user_nav" class="topbar">
  <div class="wrapper spaced">

    <div class="network">
      <% if current_network == nil%> 
        <%= link_to image_tag("logo.png", :class => "brand"), root_path %>
      <%else%>
        <% if current_network.logo.file == nil %>
          <%= link_to image_tag("logo.png"), "http://#{current_network.subdomain}.#{links}/"%>
        <%else%>
          <%case %>
            <% when current_network.logo_type == '128x26'%>
              <%= link_to image_tag("#{current_network.logo.response}"), "http://#{current_network.subdomain}.#{links}/"%>
            <% when current_network.logo_type == '26x26' %>
              <%= link_to image_tag("#{current_network.logo.square}"), "http://#{current_network.subdomain}.#{links}/"%>
            <%else%>
              <%= link_to image_tag("logo.png"), "http://#{current_network.subdomain}.#{links}/"%>
          <%end%>
        <%end%>
      <%end%>
    </div>
    
    <div class="activity-notificactions">
      <div id="message_notifications" class="activity-block">
        <%= render :partial => '/shared/chat/message_notifications' %>
      </div>

      <div id="notifications" class="activity-block">
        <%= render :partial => '/shared/notifications' %>
      </div>

      <div class="activity-block">
        <div class="dropdown-wrap">
          <div class="dropdown-pull activity-dropdown-pull">
            <%= icon('user-settings') %>
          </div>
          <div class="dropdown-v right">
            <i class="tip"></i>
            <ul>
              <% if current_role == "admin"%>
                <li>
                  <%= link_to "AdministraciÃ³n", managers_wall_path %>
                </li>
              <% end %>
              <li>
                <%= link_to "Ir a mi perfil", show_user_path(current_user.personal_url) %>
              </li>
              <li>
                <%= link_to "Editar perfil", edit_user_registration_path %>
              </li>
              <li>
                <%= link_to "Salir", sign_out_path, method: :delete %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div id="log_loadding" style="display:none;"></div>
    <div id="noticce"style="background:#eee; position:absolute; margin-top:0px; width:100%;">
      <div id="notice" class="notice"></div>
    </div>
  </div>
</header>