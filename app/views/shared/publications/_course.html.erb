<div class="academic-athor">
  <%= link_to course_path(publication.publication.id), title: course_post[:name] do %>
    <%= avatar('course', '150', 'no', publication.publication.id, 'avatar avatar-60', 'no', 'no') %>
  <% end %>
</div>
<div class="academic-details">
  <div class="academic-icon">
    <%= icon('curso-publication') %>
  </div>
  <div class="academic-intro">
    <p><%=t('.new_course')%></p>
  </div>
  <div class="academic-title">
    <h3 class="title"><%= link_to course_post[:name], course_path(publication.publication.id) %></h3>
  </div>
  <div class="academic-desc">
    <p><%= truncate( course_post[:content], omission: "...", length: 150) %></p>
  </div>
  <div class="academic-button">
    <%= link_to(t('.go_course'), course_path(publication.publication.id), class: "btn btn-transparent uppercase") %>
  </div>
</div>
<%= render partial: 'shared/publications/meta_data', locals: { publication: publication, post: publication.publication, white_like_icon: true} %>