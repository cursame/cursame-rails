<div class="publication-metadata">
  <div class="meta-data">
      <% @vote = publication.publication.votes.up.by_type(User).where(:voter_id => current_user.id)%>
      <% @condition = @vote[0]%>
      <%if @condition == nil %>

        <div id="liked-<%= publication.id%>">
          <%= link_to upvote_path(publication.id), :remote => true do %>
            <% if white_like_icon %>
              <%= icon('like-c-white') %>
            <% else %>
              <%= icon('like-c') %>
            <% end %>
          <% end %>
        </div>
       
      <%else%>
       
         <div id="liked-<%= publication.id%>">
            <%= link_to downvote_path(publication.id), :remote => true do %>
              <% if white_like_icon %>
                <%= icon('like-c-white-active') %>
              <% else %>
                <%= icon('like-c-active') %>
              <% end %>
            <% end %>
         </div>
       
      <%end%>
    </div>
    <span>&middot;</span>
    <div class="meta-data">
      <% if publication.publication.votes.up.size == 0 %>
        <span id="counter-like-<%= publication.id%>"><%= publication.publication.votes.up.size %></span> Me gusta
      <% else %>
        <%= link_to get_votes_of_publication_path(publication.id), remote: true do %>
          <span id="counter-like-<%= publication.id %>"><%= publication.publication.votes.up.size %></span> Me gusta
        <% end %>
      <% end %>
    </div>
    <span>&middot;</span>
    <div class="meta-data">
      <%= post.comments.count %> Comentarios
    </div>
    <span>&middot;</span>
    <div class="meta-data">
      <span>Hace <%= time_ago_in_words post.created_at %> a las <%= post.created_at.strftime('%l:%M %P') %></span>
    </div>
</div>