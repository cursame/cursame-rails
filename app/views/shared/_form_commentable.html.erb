<div class="child-comment-box add-comment">
  <% random_id = "#{random}" %>

  <div class="comment-author">
    <span class="avatar-holder">
      <%= avatar('user', '30', 'no', current_user.id, 'avatar', 'no', 'no') %>
    </span>
  </div>

  <div class="comment-main">  
    <%= form_tag "/home/add_new_comment", :class => "default-form comment-form", :id => random_id, :remote =>true do %>
      <%= text_area_tag "comment", nil, :rows => 2, :cols => 40, :placeholder=>t('.write_comment'), :id => "comment_for_"+commentable_type+commentable_id.to_s, :required => 'required', :class => 'autogrow new-comment-textarea new-comment-trigger' %>
      <%= hidden_field_tag 'commentable_id', commentable_id %>
      <%= hidden_field_tag 'commentable_type', commentable_type %>
      <%= hidden_field_tag 'from_enter_key', true %>
      <%= submit_tag t('.comment'),:style=>"display:none;" %>
      
      <div class="new-comment-actions">
        <span class="btn btn-primary input-btn activable">
          <%= submit_tag t('.comment_2'), class: "activable" %>
        </span>
      </div>
    <% end %>
    
  </div>
</div>
<script>
  $(function() {
    $('form#<%= random_id %>').validate();
  });
</script>