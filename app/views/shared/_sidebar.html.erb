
<div class="global-sidebar">
  <div class="user">

      <%= link_to show_user_path(current_user.personal_url) do %>
        
        <% if current_user.avatar.blank? %>
          <%= image_tag(current_user.image_avatarxx, alt: "", class: "avatar") %>
        <%else%>
          <%= image_tag(current_user.avatar.mini, alt: "", class: "avatar") %>
        <%end%>
        
        <span class="name">
          <%= truncate("#{current_user.name} (#{current_role})" , :omission => "...", :length => 22) %>
        </span>

      <% end %>

      <div class="dropdown-wrap">
        <div class="dropdown-pull">
          <div class="triangle"></div>
        </div>
        <div class="dropdown-v right">
          <i class="tip"></i>
          <ul>
            <li>
              <%= link_to "Editar perfil", edit_user_registration_path %>
            </li>
            <li>
              <%= link_to "Salir", destroy_user_session_path, method: :delete %>
            </li>
          </ul>
        </div>
      </div>

      <% if current_role == "admin"%>
        <%= link_to "Administración", managers_wall_path, :style =>'', :class => "admin-access"%>
      <% end %>
      
  </div>

  <div class="sidebar-section sidebar-navigation">
    <div class="sidebar-section-main">
      <ul class="section-list navigation">
        <li>
          <%= link_to "http://#{current_network.subdomain}.#{links}/" do %>
            <i class="i i-home-w"></i>Home
          <% end %>
        </li>
        <li>
          <%= link_to my_deliveries_path do %>
            <i class="i i-homeworks-w"></i> Tareas
          <%end%>
        </li>
        <li>
          <%= link_to "#{my_surveys_path}" do %>
            <i class="i i-questionaries-w"></i>Cuestionarios
          <%end%>
        </li>
        <li>
          <%= link_to "#{my_discussions_path}" do %>
            <i class="i i-discussions-w"></i>Discusiones
          <%end%>
        </li>
        <li>
          <%= link_to courses_path do %>
            <i class="i i-courses-w"></i>Cursos
          <% end %>
        </li>
        <li>
          <a href="">
            <i class="i i-stats-w"></i>Calificaciones
          </a>
        </li>
        <li>
          <a href="">
            <i class="i i-calendar-w"></i>Calendario
          </a>
        </li>
        <li>
        <%= link_to network_comunity_path do %>
            <i class="i i-community-w"></i>Comunidad
          <% end %>
        </li>
      </ul>
    </div>
  </div>
  
  <div class="sidebar-section sidebar-courses">
    <div class="sidebar-section-header">
      <h3><%= current_network.courses_tag %></h3>
    </div>
    <div class="sidebar-section-main scroller">
      <ul class="section-list side-courses">
        <% current_user_courses.each do |c| %>
          <li>
            <%= link_to course_path(c.id) do %>
              <%= avatar('course', '25', "no", "#{c.id}", "avatar avatar-24", "no", "no") %>
              <%= c.title %>
            <% end %>
          </li>
        <%end%>
      </ul>
    </div>
  </div>
  
  <div class="sidebar-section sidebar-chat">
    <div class="sidebar-section-header">
      <h3>Chat (<%= @courses_online.count + @friends_online.count %>)</h3>
    </div>
    <div class="sidebar-section-main scroller">
      <% if @show_chat_panel %>  

        <ul class="section-list" style="display: none;">
          <% @courses_online.each do |course|%>
            <li>
              <%= link_to open_channel_path(course.id,"course" => true), :remote => true do %>
                <% if course.avatar.file == nil %> 
                  <%= image_tag("course-avatarxx.png", alt: "", class: "avatar avatar-24") %>
                <%else%>
                  <%= image_tag("#{course.avatar.mini}", alt: "", class: "avatar avatar-24") %>
                <%end%>

                <%= truncate("#{course.title}", :omission => "...", :length => 30) %>
              <% end %>
            </li>
          <%end%>
        </ul>
        
        <ul class="section-list side-courses">
          <% @friends_online.each do |user|%>
            <li>
              <%= link_to open_channel_path(user.id), :remote => true do %>
                <% if user.avatar.file == nil %> 
                  <%= image_tag("imagexx.png", alt: "", class: "avatar avatar-24") %>
                <%else%>
                  <%= image_tag("#{user.avatar.mini}", alt: "", class: "avatar avatar-24") %>
                <%end%>

                <%= truncate("#{user.name}", :omission => "...", :length => 30) || user.email %>
                <div class="<%= user.online ? 'user-online': 'user-offline' %>" id ="chat-list-user-<%= user.id %>" title="<%= user.online ? 'Usuario conectado': 'Usuario desconectado' %>"></div>

              <% end %>
            </li>
          <%end%>
        </ul>

      <% end %>
    </div>
  </div>

  <div class="global-footer">
    <div class="cursame-brand">
      <%= link_to "Cursame", "https://cursa.me/", class: "footer-logo", target: "_blank" %>
    </div>
    <div class="rights">
      <span>® <%= Time.new.year %></span>
    </div>
  </div>

</div>
