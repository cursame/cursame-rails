<%= form_tag "/home/add_new_mesage", :class => "new-chat-pannel-message", :id => 'new-chat-pannel-message'+ channel_id.to_s,  :remote =>true do %>
	<%= text_area_tag :mesage, nil ,:id => 'chat_'+ channel_id.to_s,:required =>'required', :placeholder => t('.msg'), :autocomplete => "off", :class => "new-message-panel-textarea autogrow #{type}" %>
	<%= hidden_field_tag :channel_name, channel_name %>
  <%= hidden_field_tag :receiver_user_id, @receiver_user_id %>
	<%= hidden_field_tag :channel_id, channel_id %>
<% end %>
<script type="text/javascript">
	//prevenimos le doble submit del mismo mensaje
  $('#new-chat-pannel-message<%= channel_id.to_s %>').submit(function(e) {
      setTimeout(function () {
      	 $('#chat_<%= channel_id.to_s %>').val('');
      },100);     
  });

  //submit on enter
    $('#chat_<%= channel_id.to_s %>').keydown(function(e) {      
        if (e.keyCode == 13 && !e.shiftKey) {
            $(this.form).submit()
            return false;
         }
    });

</script>