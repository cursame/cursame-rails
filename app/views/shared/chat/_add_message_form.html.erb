<%= form_tag "/home/add_new_mesage", :class => "new-chat-pannel-message", :id => 'new-chat-pannel-message',  :remote =>true do %>
	<%= text_field_tag :mesage, nil , :required =>'required', :placeholder => 'Escribe un mensaje y presiona Enter.', :autocomplete => "off" %>
	<%= hidden_field_tag :channel_name, channel_name %>
  <%= hidden_field_tag :receiver_user_id, @receiver_user_id %>
	<%= hidden_field_tag :channel_id, channel_id %>
<% end %>
<script type="text/javascript">
	//prevenimos le doble submit del mismo mensaje
  $('#new-chat-pannel-message').submit(function(e) {
      setTimeout(function () {
      	 $('#mesage').val('');
      },100);     
  });
</script>