
<%= form_tag "/home/add_new_comment", :class => "default-form comment-form comment_form_top", remote: true do %>

  	 <%  @message = message %>

  <div class="video_help" style="display: none" id="comment_help">
	  <div class="content_video" id="content_video_video"></div>
  </div>
  
  <% if comment_id.nil? then %>
    <%= text_area_tag "comment", nil, :rows => 4, :cols => 81, :style =>'padding: 12px 12px 12px 12px; width: 570px; outline-width: 0px;', :placeholder=> "#{message}", :class => 'comment_for_wall' %>
  <% else %>
    <%= text_area_tag "comment", comment, :rows => 4, :cols => 81, :style =>'padding: 12px 12px 12px 12px; width: 570px; outline-width: 0px;', :placeholder=> "#{message}", :class => 'comment_for_wall' %>
  <% end %>
  <%= hidden_field_tag 'commentable_id', commentable_id %>
  <%= hidden_field_tag 'commentable_type', commentable_type %>
  <% if comment_id != nil then %>
    <%= hidden_field_tag 'comment_id', comment_id %>
  <% end %>
  
  <div class="submit-area"></div>
  
  	<%= button_tag "Cancelar", :type => 'button', :class=>'input-button cancel-post-form_tab', :id => 'cancel-post-form_tab' %>
  	<%= submit_tag "Comentar", :class=>"btn btn-primary activable", :id => 'comment-post-form' %>
  	
  	<a class="help" id="help_comment" style="float: left!important; margin: 7px 0px 0px 17px!important;"><%= image_tag('help.png')%></a>
  	
  		<%if !@user_show%>
  			<% if @incourse != true%>
  				<% if comment_id == nil %>
    
  					<div id="dropdrop_comment" style="float: right; margin:4px;">
	  					<%= render :partial => "shared/dropdown", :locals => { :hasPublic => true, :hasCourses => true, :hasGroups => true,
                                                  :hasUser => true, :defaultText => 'PÃºblico', :defaultClass => 'public-dd' } %>
					</div>

				<% end %>
			<%else%>
             <% @message = 'Coloca un comentario en este curso.' %>
			 
              <%=  hidden_field_tag "commentable_type",'Course'%>
              <%=  hidden_field_tag "delivery[course_ids][]", @course.id %>
 			 
             <script>
               $(document).ready(function(){
               $('#help_comment').css('margin-top','10px');
               $('#colp').html("<%= @message %>")
               $('#comment').attr("placeholder","<%= @message %>");
               });
             </script>
		<%end%>
	<% end %>
	<script>
	  $('#cancel-post-form_tab').click(function(){
	      $('#comment').attr("placeholder", "<%= @message %>");
      });
	</script>

  <script>
    $('#help_comment').click(function() {
      $('#comment_help').toggle('blind', 400);
      if($("#comment_help").css( 'visibility') == "hidden") {
        $('#content_video_video').html('');
              } else {
        $('#content_video_video').html('<object width="560" height="280"><param name="movie" value="http://www.youtube.com/v/PsV6eKyMQNI?hl=es_ES&amp;version=3&amp;rel=0"></param><param name="allowFullScreen" value="true"></param><param name="allowscriptaccess" value="always"></param><embed src="http://www.youtube.com/v/PsV6eKyMQNI?hl=es_ES&amp;version=3&amp;rel=0" type="application/x-shockwave-flash" width="560" height="280" allowscriptaccess="always" allowfullscreen="true"></embed></object>');
      }
    });            
  </script>
  
<% end %>

