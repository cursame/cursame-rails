<%= form_tag path, :method => 'get', :class => "filter-form", :id => "wall_search" do %>
<ul id="trans-nav">
    <li><img src="/assets/filtrar.png" style="margin-left: 13px;">
        <ul>
	        <img src="/assets/line-up.png" style="width:11px;height:10px;position:absolute;display:block;margin:-8px 0 0 25px;">
			<%= hidden_field_tag :page, 1 %>
			<%  id = id || nil %>
			<% if id %>
				<%= hidden_field_tag :id, id %>
			<%end%>
            <li><label class="lblclass"><%= radio_button_tag 'search', 'Todos' %><%=t('.all')%></label></li>
			<li><label class="lblclass"><%= radio_button_tag 'search', 'Discussion' %><%=t('.discuss')%></label></li>
			<li><label class="lblclass"><%= radio_button_tag 'search', 'Course' %><%=t('.courses')%></label></li>
			<li><label class="lblclass"><%= radio_button_tag 'search', 'Comment' %><%=t('.comments')%></label></li>
			<li><label class="lblclass"><%= radio_button_tag 'search', 'Delivery' %><%=t('.homework')%></label></li>
			<li><label class="lblclass"><%= radio_button_tag 'search', 'Survey' %><%=t('.quest')%></label></li>
        </ul>
    </li>
</ul><!-- </nav> -->

<% end %>

<script>
	$(function(){
		$("#wall_search input:radio").live('click',function(){
			var form = $('#wall_search'),
	            data = form.serialize();
	        data = data.replace('&search=Todos', '');
			$.get(form.action,data,null,"script");
		});
	});
</script>