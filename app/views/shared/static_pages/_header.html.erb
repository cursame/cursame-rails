<% if params[:error] %>
  <script>
    $(function() {
      $('.login-trigs').trigger('click');
      $('.website-login-forms').find('.error-login-form').addClass('active');
    });
  </script>
<% end %>
<div class="website-header">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="site-nav">
            <%= link_to "/", title: "Cúrsame", class: "brand-logo" do %>
              <%= icon('logo-cursame') %>
            <% end %>
            <ul class="nav">
              <%
                active = "class='active'"
                action = params[:action]
              %>
              <li <%= active if action == 'features' %>>
                <%= link_to t('.title1'), features_path %>
              </li>
              <li <%= active if action == 'success_stories' %>>
                <%= link_to t('.title2'), success_stories_path %>
              </li>
              <li <%= active if action == 'about_us' %>>
                <%= link_to t('.title3'), about_us_path %>
              </li>
              <li <%= active if action == 'jobs' %>>
                <%= link_to t('.title4'), jobs_path %>
              </li>
              <li <%= active if action == 'contact' %>>
                <%= link_to t('.title5'), contact_path %>
              </li>
            </ul>
          </div>
          <div class="site-nav-actions">
            <span class="txt"><%= t('.text1') %></span>
            <div class="dropdown-wrap website-login">
              <div class="dropdown-pull login-trigs activity-dropdown-pull">
                <span class="as-link"><%= t('.text2') %></span>
              </div>
              <div class="dropdown-v right">
                <i class="tip"></i>
                <div class="website-login-forms dropdown-content">
                  <div id="login-w" class="website-login-form-content active">
                    <h4><%= t('.text2') %></h4>
                    <p><%= t('.text3') %></p>
                    <p class="error-login-form"><%=t('.notif')%></p>
                    <br>
                    <%= form_tag new_sesion_from_home_path, class: 'website-login-form' do %>
                      <div class="form-group no-label">
                        <div class="form-group-main">
                          <span class="input-icon session-icon-input">
                            <%= icon('email') %>
                            <%= email_field_tag 'email', '', placeholder: (I18n.locale == :en ? 'Email' : 'Correo electrónico'), required: "required", autocomplete: "off" %>
                          </span>
                        </div>
                      </div>
                      <div class="login-footer">
                        <div class="fr">
                          <span class="btn btn-primary btn-medium input-btn">
                            <%= submit_tag t('.search_network') %>
                          </span>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(function() {
    $('.website-login-form').validate();
    $('.website-recover-form').validate();
  });
</script>