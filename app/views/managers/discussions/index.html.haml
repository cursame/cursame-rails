.cols-12
  .col.col-12.alpha.omega
    .col-inner
      .managers-section-header
        .title
          %h1 Discusiones
      %table.data-table
        %thead
          %tr
            %th Nombre
            %th Curso
            %th Estado
            %th Tipo
            %th Fecha de creación
            %th Acciones
        %tbody
          - @discussions.each do |discussion| 
            %tr
              %td= link_to discussion.title, managers_discussion_path(discussion)
              %td
                - unless discussion.courses.empty?
                  = link_to discussion.courses.first.title, managers_course_path(discussion.courses.first)
                - else
                  Publica
              %td= discussion.state == "published" ? "Publicada" : "Sin Publicar"
              %td= discussion.evaluable ? "Evaluable" : "No Evaluable"
              %td= discussion.created_at
              %td
                .dropdown-wrap.actions
                  .dropdown-pull.btn.btn-secondary.btn-small
                    = icon 'drop-arrow'
                  .dropdown-v.right{:style => "right: -8px;"}
                    %i.tip
                    %ul
                      %li= link_to 'Ver', managers_discussion_path(discussion)
                      %li= link_to 'Borrar', managers_discussion_path(discussion), class: 'btn btn-small btn-secondary', method: :delete, confirm: 'Estas seguro de borrar esta discusión.'
                      
      .digg_pagination.paginator
        = will_paginate @discussions