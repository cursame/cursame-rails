.cols-12
  .col.col-12.alpha.omega
    .col-inner
      .managers-section-header
        .title
          %h1 Cursos
        .actions
          = link_to 'Crear curso', new_managers_course_path, class: 'btn btn-complementary'
      %table.data-table
        %thead
          %tr
            %th Nombre
            %th Administradores
            %th Miembros
            %th Fecha de creaciÃ³n
            %th 
        %tbody
          - @courses.each do |course|
            %tr
              %td
                = avatar('course', '30', "no", course.id, "avatar avatar-30", "no", "no")
                = link_to course.title, managers_course_path(course)
              %td
                - course.owners.each do |user|
                  %p= user.name
              %td= course.users.count
              %td= course.created_at
              %td
                = link_to 'Ver', managers_course_path(course), class: 'btn btn-small btn-secondary'
                = link_to 'Editar', edit_managers_course_path(course), class: 'btn btn-small btn-secondary'
                = link_to 'Borrar', managers_course_path(course), class: 'btn btn-small btn-secondary', method: :delete, confirm: 'Estas seguro de borrar este curso.'