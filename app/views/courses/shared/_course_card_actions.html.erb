<% @correspond = MembersInCourse.find_by_user_id_and_course_id(current_user, course.id) %>
<% if current_user.admin? || @correspond %>
  <% if current_user.admin? || (@correspond.accepted && @correspond.owner) %>
    <div class="dropdown-wrap">
      <div class="dropdown-pull btn btn-secondary btn-small">
        <%= icon 'drop-arrow' %>
      </div>
      <div class="dropdown-v left" style="left: -8px;">
        <i class="tip"></i>
        <ul>
          <% if course.active_status and current_network.evaluable? %>
            <li>
              <%= link_to 'Calificaciones finales', course_closure_path(course) %>
            </li>
            <li>
              <%= link_to "Calificar actividades", evaluate_course_path(course) %>
            </li>
            <li>
              <%= link_to "Forma de evaluación", course_evaluation_schema_path( course ) %>
            </li>
          <% end %>
          <li>
            <%= link_to "Editar", edit_course_path( course.id ) %>
          </li>
          <li>
            <%= link_to "Clonar", clone_course_view_path(course) %>
          </li>
          <li>
            <%= link_to course.active_status? ? "Finalizar" : "Activar",  active_status_path(course) %>
          </li>
        </ul>
      </div>
    </div>
  <% elsif @correspond.accepted && ! @correspond.owner and course.public_status === 'public'%>
    <div class="dropdown-wrap">
      <div class="dropdown-pull btn btn-secondary btn-small">
        Estás inscrito <%= icon 'drop-arrow' %>
      </div>
      <div class="dropdown-v left">
        <i class="tip"></i>
        <ul>
          <li>
            <div id="uik_<%= @correspond.id %>"> 
              <%= link_to @correspond , confirm: '¿Esta seguro de querer abandonar este curso?', method: :delete, :remote => true do %>
                Abandonar curso
              <% end %>
            </div>
          </li>
        </ul>
      </div>
    </div>
  <% elsif ! @correspond.accepted %>
    <div class="btn btn-disabled btn-small">
      Solicitud enviada
    </div>
  <% end %>
<% else %>
  <%= form_for( member, :remote => true ) do |f| %>
    <%= f.hidden_field :user_id,:value => current_user.id %>
    <%= f.hidden_field :course_id, :value => course.id %>
    <%= f.hidden_field :accepted, :value => 0 %> 
    <% unless current_user.admin? %>
      <span class="btn btn-primary input-btn btn-small">
        <%= f.submit "Enviar solicitud" %>
      </span>
    <% end %>
  <% end %>
<% end %>