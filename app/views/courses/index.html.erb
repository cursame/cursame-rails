<h1>Listing courses</h1>

<table>
  <tr>
    <th>Tile</th>
    <th>Silabus</th>
    <th>Init date</th>
    <th>Finish date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.tile %></td>
    <td><%= course.silabus %></td>
    <td><%= course.init_date %></td>
    <td><%= course.finish_date %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

