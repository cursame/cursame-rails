<% @course.expired? %>
<% @incourse = true %>

<div class="profile-header-outer">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="profile-header">
            <div class="profile-banner" style="background-image: url(<%= @course.coverphoto.blank? ? "/assets/#{@course.image_coursex}" : @course.coverphoto %>)">
              <% permitted_to? :create, :courses do %>
                <% if current_role == 'admin' || @member.owner != nil && @member.owner == true %>
                  <div class="admin-buttons">
                    <div class="group-buttons hard-border">
                      <div class="button">
                        <%= link_to "Monitor de Actividades", course_activities_depot_path, class: 'btn btn-small btn-secondary' %>
                      </div>
                      <div class="button">
                        <div class="dropdown-wrap">
                          <div class="dropdown-pull">
                            <span class="btn btn-small btn-secondary">
                              Más
                            </span>
                          </div>
                          <div class="dropdown-v right">
                            <i class="tip"></i>
                            <ul>
                              <li>
                                <%= link_to "Editar", edit_course_path( @course.id ) %>
                              </li>
                              <li>
                                <%= link_to "Clonar", clone_course_view_path %>
                              </li>
                              <li>
                                <div id="propyety_course_<%=current_course.id%>">
                                 <% if current_course.active_status %>
                                   <%= link_to "Desactivar",  active_status_path, :remote => true %>
                                  <%else%>
                                   <%= link_to "Activar",  active_status_path, :remote => true %>
                                 <%end%>
                                </div>
                              </li>
                            </ul>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
              <div class="profile-avatar">
                <%= link_to course_path(@course.id) do %>
                  <span class="avatar-holder">
                    <%= avatar('course', '150', 'no', @course.id, "avatar", "no", "no") %>
                  </span>
                <% end %>
              </div>
            </div>
            <div class="profile-info">
              <div class="profile-title">
                <%= link_to course_path(@course.id) do %>
                  <h1><%= @course.title %></h1>
                <% end %>
              </div>
            </div>
            <div class="page-sub-navigation">
              <% action = params[:action] %>
              <ul>
                <li>
                  <%= link_to course_path(@course), class: (action == 'show' ? "active" : " ") do %>
                    Publicaciones
                    <%= icon 'sub-nav-tip' %>
                  <% end %>
                </li>
                <li>
                  <%= link_to about_course_path, class: (action == 'about' ? "active" : " ") do %>
                    Información
                    <%= icon 'sub-nav-tip' %>
                  <% end %>
                </li>
                <li>
                  <%= link_to course_members_path, class: (action == 'members' ? "active" : " ") do %>
                    Miembros
                    <%= icon 'sub-nav-tip' %>
                  <% end %>
                </li>
                <li>
                  <%= link_to library_in_course_path, class: (action == 'library' ? "active" : " ") do %>
                    Biblioteca
                    <%= icon 'sub-nav-tip' %>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>