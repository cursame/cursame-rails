<% permitted_to? :create, :courses do %>

<!--manejo de cursos rapido-->    
<div class="title_dxv">
    <h1> Acceso rápido de administración de cursos </h1>
    
    
    <div class="black-delivery-box">
<% current_user.courses.each do |course|%>
    </div>
    <!-- estamos creando un container especial para que no se descomponga el layout -->
 
    <div class="list_alt_box">
        <div class="header">
            <%= course.title %>
            <div class="status">
                <%if  course.active_status == true%>
                  Activo <%= link_to "desactivar curso", active_status_path(course.id), :remote => true %>
                <%else%>
                  Inactivo <%= link_to "activar curso", active_status_path(course.id), :remote => true %>
                <%end%>
            </div>
        </div>
      
        <div class="top-header-delivery-box">
            <ul>
                <li id="tareas_list_<%= course.id %>" ><div class="green-circle-mini" ></div><span>Tareas</span></li>
                <li id="cuestrionario_list_<%= course.id %>"><div class="orange-circle-mini"></div><span>Cuestionario</span></li>
            </ul>
        </div>
 
      
      <script>
          $('#tareas_list_<%= course.id %>').click(function(e) {
              $('#delivery_list_<%= course.id %>').lightbox_me({
                  centered: true, 
                  onLoad: function() { 
                      $('#delivery_list_<%= course.id %>').find('input:first').focus()
                      }
                  });
              e.preventDefault();
          });
          $('#cuestrionario_list_<%= course.id %>').click(function(e) {
                $('#survey_list_<%= course.id %>').lightbox_me({
                    centered: true, 
                    onLoad: function() { 
                        $('#survey_list_<%= course.id %>').find('input:first').focus()
                        }
                    });
                e.preventDefault();
           });
          
      </script>



<%end%>
</div>  
</div>
<!--termina manejo de cursos rapido-->
<!-- comienza deliveries courses -->
  
<% current_user.courses.each do |course|%>     
<% if  course.deliveries.count != 0 %>
<div class="light_box" id="delivery_list_<%= course.id %>"  style="display:none" >
             <a id="close_x" class="close close_l" href="#"><center>x</center></a>
                <div class="high_tent">
                    <div class="deliveries_list"> 
                        <h1> Tareas en el curso </h1>                     
                        <% course.deliveries.each do |delivery|%>
                            <div class="title_from_delivery_<%=delivery.id%>">
                                <% @delivery_id = delivery.id %>
                                <% @course_id = course.id %>
                                <a></b>  <%= delivery.title %> - (<%= delivery.assignments.count%>) </b> </a>
                    </div>
                    
                         <!--falta script para ocultar y deplegar las entregas de una tarea-->
                                
                    <!-- se prepara formualrio de deliveries -->
                            <% delivery.assignments.each do |assignment|%>
                                <% @user_id = assignment.user_id %>
                                <% @user = User.find_by_id(@user_id)%>
                 
                         <!--este es un menu que se utiliza para traer las llamadas ajax de el curso-->
                         <div id="assignment_id_al_<%= delivery.id %>" >
                             <div>
                             <%= render :partial => "courses/delivery_menu", :locals => {:assignment => assignment, :course => course}%>
                             </div>
                         </div>     
                                                                    
                            <%end%>
                    <!--se cierra el formulario de deliveries -->
                        <%end%>
                    <!-- se cierra el ciclo de courses deliveries-->
             
                </div>
          
                <div class="locklok"  id="locomotion_<%=course.id%>">
                 <h1>Formularios</h1>
                    
                </div>
</div>
        
</div>    
      

<%end%>
<%end%>


<!-- termina deliveries courses -->

<% current_user.courses.each do |course|%>     
<% if  course.surveys.count != 0 %>

             <div class="light_box" id="survey_list_<%= course.id %>" style="display:none"  >
                 <a id="close_x" class="close close_l" href="#"><center>x</center></a>
                 <div class="high_tent">
                  
                 
                <% course.surveys.each do |survey|%>
                   contador de examens respindidos   <%= survey.user_surveys.count%>

                   <div id="title_from_delivery<%=survey.id%>">
                       <b><%= survey.name %></b>
                       <% survey.user_surveys.each do |user_survey|%>
                           <%= user_survey.evaluation %>
                       <%end%>
                   </div>
                <%end%>
                </div>
             </div>
<%end%>
<%end%>


<!--finaliza div de integracion como container-->


 
<%end%>



