
<p id="notice"><%= notice %></p>
<% if @course.coverphoto = nil %>
    <div id="banner-profile" style="background:url('/assets/bannerprofile.png');background-size: 970px 315px ; background-position-y: -40px; background-repeat: no-repeat;"></div>
<%else%>
    <div id="banner-profile" style="background:url('<%= @course.coverphoto.expanded %>');background-size: 970px 315px ; background-position-y: -40px; background-repeat: no-repeat;">
      <div class="banner-shadow">
        <div id="box-titles">
          <ul id="banner-btns" class="list-header">
            <li class="stats" get-to="#stats-area" move-sidebar-height="105px">Estadisticas</li>
            <li class="settings">Configuracion</li>
          </ul>
        </div>
        <div id="box-titles-content" class="box-titles-content-style">
          <div id="stats-area" class="menu-course">
            <ul>
              <li class="sandwich active" ><img src="/assets/icons/home.png"> <br> <b> <%= current_course.discussions.count %> </b> ACTIVIDADES <br><i>Muro principal</i></li>
              <li class="sandwich"><img src="/assets/icons/homework.png"> <br> <b>3 </b> TAREAS<br><i><%= current_course.deliveries.count %> totales</i></li>
              <li class="sandwich"> <img src="/assets/icons/discus.png"> <br> <b> 2 </b>DISCUSIONES<br><i><%= current_course.discussions.count %> totales</i></li>
              <li class="sandwich"><img src="/assets/icons/test.png"> <br> <b> 1 </b>CUESTIONARIO<br><i><%= current_course.surveys.count %> totales</i></li>
              <li> <img src="/assets/icons/grades.png"> <br> <b> 9.1 </b>PROMEDIO <br><i>8.5 general</i></li>
            </ul>
          </div>

        </div>
      </div>
    </div>
<%end%>


<!-- Content Post Box -->
<div id="box-content" class="profile-line">
<!-- SideBar -->
<div id="side-bar" class="side-left-bar">
  <!-- User Avatar -->
  <% @member = MembersInCourse.find_by_user_id_and_course_id(current_user.id, current_course.id)%>
  
  <div id="box-user-credential" class="network-layout">
    <div class="thumbnail"  >
      <%= link_to image_tag(@course.avatar.profile)%>
    </div>
    <div class="tagname">
      <%= @course.title %>
    </div>
  </div>
     <div id="box-course" class="basic-lateral-box margin-top" >
         <p><b>Silabus</b><i>(descripcci칩n)</i><b>:</b> 
         <%= @course.silabus %> </p>
     </div>
     <% if @member.owner == true  %>
         <%= link_to "editar curso", edit_course_path%>
     <%end%>
     <div id="tabs-friends" class="tabs-style">
         <div id="box-friends" class="basic-lateral-box" >
            <% @course.members_in_courses.each do |member|  %>   
                <% @members = User.find_by_id(member.user_id) %>
                <!--coloca la imagen y el nombre-->
                <% if @member.accepted == true %>
                    <%= image_tag(@members.avatar.modern,{:class => "avatar-mini"})%>
                <%end%>
            <%end%>
             <% if @member.owner == true %>
                    <div class="view-all"> <%= link_to "Administrador de miembros", course_members_path %></div>
               <%end%>
         </div>

  </div>
</div>

<!-- Content -->

<div id="box-stream-post">
    
  <%=render :partial => 'shared/post_menu' %>

  <%# @comments.reverse.each do |comment| %>
  <%#= render :partial => '/shared/comments', :locals => {:comment => comment} %>
  <%#end%>

  <%#  @course.deliveries.each do |delivery| %>
      <%#= delivery.publish_date%>
      <%#= delivery.title %>
      <%#= delivery.description %>
      <%#= render partial: "assignments/form_for_delivery"%>
<%#end%>

  <%  @course.deliveries.reverse.each do |delivery| %>
  

  <div id="box-comments">
      <div class="general-cir"></div>
         <div id="comment1" class="comment-text" >
             <div class="arrow-left"></div>
               <div class="header">
                 <div class="null-image"></div>
                 <div class="avatar">
                 <%= link_to image_tag(delivery.user.avatar.modern,{:class => "avatar-mini"}), show_user_path(delivery.user.personal_url) %></div>
                   <div class="name"> <%= delivery.title %></div><span><%= delivery.publish_date%></span>
                 </div>
                  <div class="content">
                     <div class="null-image"></div>
                     <%= delivery.description %></br>
                     <% delivery.areas_of_evaluations.each do |areas|%>
                        <%= areas.name %>
                        <%= areas.evaluation_percentage%>
                     <%end%>
                     <% delivery.assets.each do|files|%>
                       <% debug files.file %>
                         <%= link_to "#{files.file}", "#{files.file}" %>
                     <%end%>
                  </div> 
                    <div class="footer">
                      <img src="/assets/icons/grey-mini-comment.png" class="icon">
                      <img src="/assets/icons/grey-mini-like.png" class="icon">
                      <div class="labels"><%# comment.comments.count %>Comentarios</div>
                      <% if @member.owner == true %>
                        <div class="labels"><div id="open-close-lo<%= delivery.id %>"><a>Respuestas</a></div></div>
                      <%else%>
                      <div class="labels"><div id="open-close-<%= delivery.id %>"><a>Responder tarea</a></div></div>  
                      <%end%>
                   
                      
                       </div>              
        <div style="display:none; margin-top:15px; margin-left:5px;" id="entrega-<%= delivery.id %>">
            <% @delivery_id = delivery.id%>
                
              <%= render partial: "assignments/form_for_delivery"%>

       </div>
       <div style="display:none; margin-top:15px; margin-left:5px;" id="entrega-lo<%= delivery.id %>">    
                <% @count_deliveries_assignments = delivery.assignments.count %>
                <%= @count_deliveries_areas_of_evaluation = delivery.areas_of_evaluation.count %>
                    <% if @count_deliveries_areas_of_evaluation > 0%>
                       
                    <%else%>
                      <b>A esta tarea no se le han asignado 치reas de evaluaci칩n </b></br>
                    <%end%>
                <% if @count_deliveries_assignments > 0%>
                    <% delivery.assignments.each do |assignment| %>
                       <b><%= assignment.title %></b></br>
                       <%= assignment.brief_description %></br>
                           
                          <%= form_for assignment do |assignment_form|%>                        
                                        
                               <%= assignment_form.fields_for :response_to_the_evaluations do |response| %>
                                     <b>rubro</b></br>
                    
                                      <%= render :partial => "assignments/responce_of_evaluation", :locals => { :f => response }%>   
                                       
                               <%end%>
                                    <b>Evaluaci칩n final</b>
                                   <%= assignment_form.text_field :accomplishment %></br>
                                   
                              
                               <%= assignment_form.submit%></br>
                             
                          <%end%>             
                    <%end%>
                    
                  <% else %>
                    <b>No se han encontrado respuestas a esta tarea</b>
                <% end %>
      </div>
         <script>
             $("#open-close-<%= delivery.id %>").click(function () {
                 $('#entrega-<%= delivery.id %>').toggle("slow");

             });  
              $("#open-close-lo<%= delivery.id %>").click(function () {
                  $('#entrega-lo<%= delivery.id %>').toggle("slow");

              });      
          </script>
      </div>
  </div>
  <%end%>
</div>

</div>