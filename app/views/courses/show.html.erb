      <a href="" class="poll"><div class="border" ><div class="icon"></div></div>Encuesta</a>
      <a href="" class="event"><div class="border" ><div class="icon"></div></div>Evento</a>
    </div>
  </div>

  <%# @comments.reverse.each do |comment| %>
  <%#= render :partial => '/shared/comments', :locals => {:comment => comment} %>
  <%#end%>

  <%#  @course.deliveries.each do |delivery| %>
      <%#= delivery.publish_date%>
      <%#= delivery.title %>
      <%#= delivery.description %>
      <%#= render partial: "assignments/form_for_delivery"%>
<%#end%>

  <%  @course.deliveries.reverse.each do |delivery| %>
  <div id="box-comments">
      <div class="general-cir"></div>
         <div id="comment1" class="comment-text" >
             <div class="arrow-left"></div>
               <div class="header">
                 <div class="null-image"></div>
                 <div class="avatar">
                 <%= link_to image_tag(delivery.user.avatar.modern,{:class => "avatar-mini"}), show_user_path(delivery.user.personal_url) %></div>
                   <div class="name"> <%= delivery.title %></div><span><%= delivery.publish_date%></span>
                 </div>
                  <div class="content">
                     <div class="null-image"></div>
                     <%= delivery.description %></br>
                     <% delivery.assets.each do|files|%>
                       <% debug files.file %>
                         <%= link_to "#{files.file}", "#{files.file}" %>
                     <%end%>
                  </div> 
                    <div class="footer">
                      <img src="/assets/icons/grey-mini-comment.png" class="icon">
                      <img src="/assets/icons/grey-mini-like.png" class="icon">
                      <div class="labels"><%# comment.comments.count %>Comentarios</div>
                      <div class="labels"><div id="open-close-<%= delivery.id %>"><a>Responder tarea</a></div></div>
                     <div class="labels"><div id="open-close-lo<%= delivery.id %>"><a>Respuestas</a></div></div>
                      
                       </div>              
        <div style="display:none; margin-top:15px; margin-left:5px;" id="entrega-<%= delivery.id %>">
            <% @delivery_id = delivery.id%>
                
              <%= render partial: "assignments/form_for_delivery"%>

       </div>
       <div style="display:none; margin-top:15px; margin-left:5px;" id="entrega-lo<%= delivery.id %>">    
                <% @count_deliveries_assignments = delivery.assignments.count %>
                <%= @count_deliveries_areas_of_evaluation = delivery.areas_of_evaluation.count %>
                    <% if @count_deliveries_areas_of_evaluation > 0%>
                       
                    <%else%>
                      <b>A esta tarea no se le han asignado áreas de evaluación </b></br>
                    <%end%>
                <% if @count_deliveries_assignments > 0%>
                    <% delivery.assignments.each do |assignment| %>
                       <b><%= assignment.title %></b></br>
                       <%= assignment.brief_description %></br>
        
                          <%= form_for assignment do |assignment_form|%>                        
                                        
                               <%= assignment_form.fields_for :response_to_the_evaluations do |response| %>
                                         <b>rubro</b></br>
                    
                                      <%= render :partial => "assignments/responce_of_evaluation", :locals => { :f => response }%>   
                                       
                               <%end%>
                                    <b>Evaluación final</b>
                                   <%= assignment_form.text_field :accomplishment %></br>
                                   
                              
                               <%= assignment_form.submit%></br>
                             
                          <%end%>             
                    <%end%>
                    
                  <% else %>
                    <b>No se han encontrado respuestas a esta tarea</b>
                <% end %>
      </div>
         <script>
             $("#open-close-<%= delivery.id %>").click(function () {
                 $('#entrega-<%= delivery.id %>').toggle("slow");

             });  
              $("#open-close-lo<%= delivery.id %>").click(function () {
                  $('#entrega-lo<%= delivery.id %>').toggle("slow");

              });      
          </script>
      </div>
  </div>
  <%end%>
</div>

</div>