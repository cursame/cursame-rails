 
<% @cc = @courses.count %>
<% if @cc == 0%>
  <b><%= t('No hay resultados en la busqueda')%> </b>
<%end%>
<div id="courses-list">
  <% @courses.each do |course| %>
    <div class="course">
      <div class="thumbnail">
        <%= link_to image_tag('/assets/courses.png'), course %>
      </div>
      <div id="crud"> 
        <% @correspond = MembersInCourse.find_by_user_id_and_course_id(current_user, course.id) %>
        <% @course_id = course.id%>
        <% if @correspond %>

          <% if @correspond.accepted == true %>
            <div id="uik_<%=@correspond.id%>"> 
            <%= link_to image_tag('unsuscript.png'),  @correspond , confirm: '¿Esta seguro de querer abandonar este curso?', method: :delete, :remote => true%>
            </div>

            <% if @correspond.owner == true %>
              <div id="usk_<%=@correspond.id%>">
                <%= link_to image_tag('/assets/icons/edit.png'), edit_course_path(course) %>
                <%= link_to image_tag('/assets/icons/destroy.png'), course, confirm: '¿Esta seguro que desea eliminar este curso?', method: :delete %>
              </div>
            <%end%>
  				<%else%>
            <span>Aún no has sido aceptado en este curso</span>
  				<%end%>
        
        <% else %>
          <div id="hidden-<%= course.id %>">
            <% if course.public_status == "Private" %>
              <%= render partial: "courses/members_in_courses/private_course"%>|
            <% else %>   
              <%= render partial: "courses/members_in_courses/public_course"%>|  
            <% end %>
          </div>
        <% end %>
      </div>
       
      <div id="course-title">
        <%= truncate("#{course.title}", :omission => "...", :length => 30) %>
      </div>

      <div id="course-info">
        <div class="hidden-text">
          <li id="silabus" class="silabus">
            <%= truncate("#{course.silabus}", :omission => "...", :length => 30) if course.silabus? %>
          </li> 
        </div>

        <li class="finishdate">
          <%= course.finish_date if (course.finish_date != nil)  %>
        </li>
      </div>
    </div>
  <% end %>
</div>
