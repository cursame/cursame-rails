
<%= render :partial => 'course-header' %>

<div class="wrapper spaced">
  <h2>Miembros del curso <%= @course.members_in_courses.count %></h2>
</div>

<scirpt src="/assets/course_members.js" ></scirpt>

<div class="wrapper">
  <% case %>
    <% when current_role == "admin" %>
      <% if @member.owner == true %>
         <%= render partial: '/courses/members_in_courses/owner_partial_for_member', :locals => {:course => @course, :member => @member} %>
       <%else%>
         <%= render partial: '/courses/members_in_courses/partial_for_members', :locals => {:course => @course, :member => @member} %>
      <%end%>   

    <% when current_role == "teacher" %>
      <% if @member.owner == true%>
         <%= render partial: '/courses/members_in_courses/owner_partial_for_member', :locals => {:course => @course, :member => @member} %>
       <%else%>
         <%= render partial: '/courses/members_in_courses/partial_for_members', :locals => {:course => @course, :member => @member} %>
      <%end%>

    <% when current_role == "student" %>
      <% if @member.owner == true%>
         <%= render partial: '/courses/members_in_courses/owner_partial_for_member', :locals => {:course => @course, :member => @member} %>
       <%else%>
         <%= render partial: '/courses/members_in_courses/partial_for_members', :locals => {:course => @course, :member => @member} %>
      <%end%> 
  <%end%>
</div>