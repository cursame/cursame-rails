<span class="rateTwo">Resultados: <%= number_with_precision(responces.evaluation, :precision => 2)%> </span>

<span class="resultsExams">
	<table cellpadding="0" cellspacing="0" border="0">
		<tr>
			<td valign="top" width="150px" style="color:#333;">Respuesta alumno</td>
			<td valign="top" width="180px" style="color:#333;">Respuesta correcta</td>
			<td valign="top" width="50px" style="color:#333;">Resultado</td>
		</tr>
			<p class="responUser"><%= responces.user.name%></p>
			<% responces.user_survey_responses.each do |r| %>
		
		<tr>
			<td colspan="3" bgcolor="#eee">
				<% @question = Question.find(r.question_id)%>
					<span class="QuestionAsk">Pregunta:<%= @question.content%></span>
            </td>
        </tr>
		<tr>
			<td width="150px"></td>
			<td width="180px" bgcolor="#ccc">
				<span class="AnswerAsk"><% @answer = Answer.find(r.answer_id)%>
				<%= @answer.content %></span>
			</td>
			<td width="50px">
				<% if  @answer.correct == true %> 
				<%= image_tag('icons/question-icon-false.png')%>
				<%else%>
				<%= image_tag('icons/remove-mini-icon-active.png')%>
				<%end%>
			</td>
		</tr>
	</table>
    
    
        

        
        
                           </p>
        
        </br>
       
        
    <%end%>
</span>