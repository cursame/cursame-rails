<% if mobile? %>
  <%= render :partial => "shared/mobile" %>
<% else%>

  <!DOCTYPE html>
  <% if request.domain != "cursa.me" && request.domain != "lvh.me" %>
    <% url =  request.url %>
    <% cursame = url.gsub(request.domain,"cursa.me") %>
    <script type="text/javascript">
      window.location.href="<%= cursame %>"  // put your correct path in a string here
    </script>
  <% end %>


  <% if request.subdomain.split(".").size != 1 then %>
  	<% url = request.url %>
      <% new_url = url.gsub(request.subdomain, request.subdomain.split(".").last) %>
    <script type="text/javascript">
      window.location.href="<%= new_url %>"  // put your correct path in a string here
    </script>
  <% end %>
  <% if request.url.split("/").last != "evaluation_download" then %>

    <html>
      <head>
        <title>Cúrsame</title>
        <%= csrf_meta_tags %>
        <meta name="google-site-verification" content="2iDsswfLsUTCsZEFQ5vlpW4OUwsVwWsqwF5WHqAHuUM" />
        <%= stylesheet_link_tag "application", :media => "all", :debug => true %>
        <%= javascript_include_tag('jquery-1.8.3.js') %>
        <%= javascript_include_tag('jquery-ui-1.9.2.custom.js') %>
        <%= javascript_include_tag('application.js') %>
        <%= javascript_include_tag('application.fullcalendar') %>
        <script type="text/javascript" src="https://www.dropbox.com/static/api/1/dropins.js" id="dropboxjs" data-app-key="ee2yf464dnk2rf1"></script>
        <script type="text/javascript" src="//assets.zendesk.com/external/zenbox/v2.6/zenbox.js"></script>
        <link rel="stylesheet" type="text/css" href="//assets.zendesk.com/external/zenbox/v2.6/zenbox.css">
        <%= favicon_link_tag "favicon.png"  %> 
        <% yield :javascript_includes %>
        <!--[if IE]>
          <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
      </head>
      <body class="<%= yield :body_classes %>">

        <% if flash[:notice] %>
          <script>$(function() { Notice('success', '<%= notice %>'); })</script>
        <% end %>

        <div class="scarlate" id="scarlate" style="display:none;"></div>
        <div class="expires" id="expires" style="display:none;"></div>

        <%= render partial: '/shared/sidebar' %>
        <% cache_expire %>
        
        <div class="wrap">
          <%= render partial: '/shared/user_header' %>
          <div class="main">
            <%= yield %>
          </div>
        </div>


        <div id="browsers_box" class="content_f_box" style="display: none">
          <h3>El navegador que estas utilizando no es compatible con Cursame.</h3>
          <p>No podrá usar la aplicación hasta haber instalado una versión compatible de su navegador, le recomendamos estos navegadores:</p>
          <div >
            <a href="http://www.google.com/intl/es-419/chrome/" target="_blank" style="width:350px; height:50px;float:left; margin-left:55px;">
                <%= image_tag('chrome.png')%>
                Descarga Google Chrome
              </a>
              <a href="http://www.mozilla.org/es-MX/firefox/new/" target="_blank" style="width:250px; height:50px;float:left;">
                <%= image_tag('Icon_Firefox.png')%>
                Descarga Mozila Firefox
              </a>
          </div>
        </div>

        <%= render :partial => '/shared/admin_messages' %>
        <div id="scrollup"></div>
        <div id="chat_sounds"></div>

        <script>
          window.clearInterval(GetIntevalExpire);

          var IntervalFunctionForExpireSession;
          IntervalFunctionForExpireSession = 15000000;

          var GetIntevalExpire = setInterval(function() {
            $.get('<%= expire_session_path %>');
          }, IntervalFunctionForExpireSession);


          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-41050835-1', 'cursa.me');
          ga('send', 'pageview');

          if (typeof(Zenbox) !== "undefined") {
            Zenbox.init({
              dropboxID:   "20290348",
              url:         "https://cursame.zendesk.com",
              hide_tab:   "true",
              tabTooltip:  "Soporte",
              tabImageURL: "https://assets.zendesk.com/external/zenbox/images/tab_es_support.png",
              tabColor:    "black",
              tabPosition: "Left"
            });
          }

          setInterval(function(){
            if( navigator.onLine ){
              $('#scarlate').hide();
              $('body').css('overflow','auto');
            } else {
              $('#scarlate').show(); 
              $('#scarlate').html(' <center><p style="padding-top:5px;"> Sin connexión de red <b> :( </b>. </p></center>');
              $('body').css('overflow','hidden'); 
            }  
          }, 5000);

          setTimeout(function(){
            var bt = '<%= browser %>';

            if ( bt == 'true' ){
              //  alert('browser compatible');
            } else {
              $('#browsers_box').lightbox_me({
                centered: true, 
                onLoad: function() { 

                  $('#browsers_box').find('input:first').focus()
                }
              });
              
              $('body').css('overflow','hidden');
            }
          }, 2000);

        </script>

      </body>
    </html>
  <% end %>
<% end %>


