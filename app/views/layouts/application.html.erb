<!DOCTYPE html>
<html>
<head>
  <title>Cursame</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "jquery-1.8.3" %>
  <%= javascript_include_tag "jquery-ui-1.9.2.custom" %>
  <%= javascript_include_tag "application" %>
  <%= yield :javascript_includes %>
  <%= csrf_meta_tags %>
</head>
<body>

    
<!-- header -->
<header id="user_nav" class="topbar" >
  <div class="center-div">
    <img src="/assets/logo.png" alt="" class="brand">

    <div id="notifications">    
      <%= render :partial => '/shared/notifications' %>
    </div>

    <div style="float: right;" class="menu-user">
      <% if user_signed_in? %>
          <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
          <span> <%= current_user.name %> </span>
          <%= image_tag(current_user.avatar.head)%>
      <% else %>
          <%= link_to "Sign up", new_user_session_path %> or <%= link_to "sign in", new_user_session_path %>
      <% end %>
    </div>
  </div>
</header>


<div class="center-div">
  <!-- content -->
  <div class="container">
    <!-- content -->
    <%= yield %>
    <br>
    <img src="http://placehold.it/920x100/" alt="">
  </div>
</div>
</div>
</body>
</html>