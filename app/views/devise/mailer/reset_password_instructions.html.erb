<% cursame_url = "http://#{@resource.devise_mailer_subdomain}.#{@resource.ubication}" %>

<%= render partial: "/notifier/shared/mail_head", locals: { cursame_url: cursame_url, no_borders: false } %>

  <div style="background-color: #ffffff;">
    <table style="width: 540px;" align="center">
      <tr>
        <td>
          <br>
          <br>
          <br>
          <h1 style="font-size: 20px; font-weight: 400; margin: 0; color: #333;">Restaurar contraseña</h1><br>
          <p style="font-size: 15px; color: #404040; font-weight: 300; line-height: 25px; margin: 0;">Nos has indicado que deseas restaurar tu contraseña, para hacerlo solo debes dar click en el botón inferior y seguir las instrucciones.</p><br/>

          <p style="font-size: 15px; color: #404040; font-weight: 300; line-height: 25px; margin: 0;">En caso que no hayas solicitado la restauración de tu contraseña por favor comunicalo a <%= link_to "hola@cursa.me", "hola@cursa.me", style: "color: #0071a2;"%></p><br/> <br/>

          <%= link_to edit_password_url(@resource, :reset_password_token => @resource.reset_password_token, :subdomain => @resource.devise_mailer_subdomain, :domain => "cursa.me") do %>
            <img src="https://app.cursa.me/assets/mails/reset_password_instructions/reset-password-button.jpg" alt="Restaurar contraseña">
          <% end %>

          <br>
          <br>
          <p style="font-size: 11px; color: #404040;">Si el boton superior no funciona, haz clic aquí : <br>
            <%= link_to edit_password_url(@resource, :reset_password_token => @resource.reset_password_token, :subdomain => @resource.devise_mailer_subdomain, :domain => "cursa.me"), edit_password_url(@resource, :reset_password_token => @resource.reset_password_token, :subdomain => @resource.devise_mailer_subdomain, :domain => "cursa.me"), style: "color: #0071a2;" %></p>

          <br>
          <br>
          <br>
          <br>
        </td>
      </tr>
    </table>
  </div>

<%= render partial: "/notifier/shared/mail_footer", locals: { no_borders: false } %>