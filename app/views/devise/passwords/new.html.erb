<% if current_network.nil? %>
  <%= render partial: "/shared/sessions/network_not_exist" %>
<% else %>
  <div class="user-sessions-wrap user-sessions-medium">
  <%= render partial: "shared/sessions/network_box_head", locals: { sign_up: false, sign_in: false } %>
  <div class="user-sessions-main">
    <div class="user-session-content">
    	<h4><%=t('.recover_pwd')%></h4>
    	<p><%=t('.email')%></p><br>

    	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "recover-password-form" }) do |f| %>
        <% unless devise_error_messages!.blank? %>
          <div class="user-session-errors">
            <%= devise_error_messages! %>
          </div>
        <% end %>

  			<div class="form-group no-label">
          <div class="form-group-main">
            <span class="input-icon session-icon-input">
              <%= icon('email') %>
              <%= f.email_field :email, :placeholder =>t('.email_field'), required: "required", autocomplete: "off" %>
            </span>
          </div>
        </div>
  			
  			<div class="user-sessions-footer">
          <div class="fr">
            <span class="btn btn-primary btn-medium input-btn">
              <%= f.submit t('.res_pwd') %>
            </span>
          </div>
        </div>

  		<% end %>

    </div>
  	
  	<div class="user-session-links">
      <%= render partial: 'devise/shared/links', locals: { login: true, signup: true, password: false, confirmation: true, unlock: true } %>
    </div>
  </div>
  </div>

  <script>
  $(function() {
    $('.recover-password-form').validate();
  });
  </script>
<% end %>