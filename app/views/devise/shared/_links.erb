
<% if login %>
  <%- if controller_name != 'sessions' %>
    <%= link_to (t('.log_in'), new_session_path(resource_name)) %><br />
  <% end -%>
<% end %>

<% if signup %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to (t('.sign_in'), new_user_registration_path) %><br />
  <% end -%>
<% end %>

<% if password %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <%= link_to (t('.pwd'), new_password_path(resource_name)) %><br />
  <% end -%>
<% end %>

<% if confirmation %>
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to (t('.confirm'), new_confirmation_path(resource_name)) %><br />
  <% end -%>
<% end %>

<% if unlock %>
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to (t('.blocked'), new_unlock_path(resource_name)) %><br />
  <% end -%>
<% end %>

