<%else%>

<!-- <div class="bg-layout"></div> -->
<div class="signup-restore"></div>

<% if !@user_inactive.nil? then %>
  <div class="user-inactive">
    Se ha enviado un correo a  <%= @user_inactive.email %>. <p>
    Esperando confirmación
  </div>
<% end %>

<div class="login">    
    <p>
    <b>Clases, Actividades, Red Social.</b><br />C&uacute;rsame conecta a directivos, profesores y alumnos<br>permiti&eacute;ndoles interactuar social y acad&eacute;micamente.
    </p>
    <br><br>

    
    <div id="Register_Singin" class="confirmationIndexHeader" style="width: 700px; height: 400px; margin: 0 auto; -webkit-border-radius: 3px; -moz-border-radius: 3px; border-radius: 3px; position: relative; overflow: hidden;">
    
    <div class="register_class" style="float: left; width: 333px; height: auto; padding: 27px;">
    
    	C&uacute;rsame conecta a directivos, profesores y alumnos permiti&eacute;ndoles interactuar social y acad&eacute;micamente.
		<br />
		
		<center>
    		<%= link_to "¿Eres nuevo? Regístrate", new_user_registration_path ,:class=>"btn large primary"%>
    	</center>
    </div>
    
    
    <div class="sign-in-class" style="width: 310px; height: 400px; display: block; float: right; background: #FFF;">
    
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:class => "form-signin" ) do |f| %>
		<div class="login-heading">Inicia sesión</div>
		
		<%= devise_error_messages! %>
		
		<%= f.email_field :email, :class => "email",:placeholder =>"Correo electrónico" %>
		<%= f.password_field :password, :class => "pswd",:placeholder =>"Contraseña"%>
		<% if devise_mapping.rememberable? -%>
		<label class="checkbox remember" style="margin-left: 11px;">
		  <%= f.check_box :remember_me %> <label>&nbsp;&nbsp;Recordarme</label>
		</label>
		
		<!--
		<label class="frgt-pswd">
		 <%=link_to "Olvidé mi contraseña", new_user_password_path,:class =>"forgot"%>
		</label>
		-->
		
		<% end -%>
		<%= f.submit "Iniciar Sesión", :class =>"log-in" %>
		
		<div class="Confirmation_ins" style="clear: both;"><%= render "devise/shared/links" %></div>
		
		<div class="" id="linked" style="cursor:pointer; color: #6a6a6a; font-size: 12px; margin-left: 12px; margin-top: 3px;">Soy un usuario antiguo y tengo dudas</div>
		
		<% end %>
	
	</div><!-- ends sign-in-class -->
	
	    <div id="sub_linked" style=" width: 640px; height: 340px; font-size: 14px; background-color: rgba(245,245,245,1); padding: 30px; text-align: left; color: rgb(128, 125, 119); z-index: 999; position: absolute; margin-top: 400px; ">

<center><div id="Closelinked" style="cursor: pointer; background: #000; color: #FFF; width: 60px; padding: 8px 20px; margin-bottom: 28px; -webkit-border-radius: 3px; -moz-border-radius: 3px; border-radius: 3px; text-align: center;">Cerrar</div></center>

	    
        <div style="width: 300px; height: 120px; margin-right: 20px; text-shadow:none; float: left;">
			<b style="font-size:15px; color:#000; clear: both;">¿Soy usuario?:</b><br /><br />
			"Si eras usuario en la plataforma anterior aún sigues siendo usuario en Cúrsame."
        </div>
        
        <div style="width: 315px; height: 120px; text-shadow:none; float: right;">
            <b style="font-size:15px; color:#000; clear: both;">¿Mi clave sigue siendo la misma?:</b></br></br>
            Se han generado nuevas contraseñas cuando confirmes tu correo electrónico con el mail que enviamos
             te pedirá que cambies tu contraseña.
        </div>
        
        <div style="width: 300px; height: 120px; margin-right: 20px; text-shadow:none; float: left;">
           <b style="font-size:15px; color:#000; clear: both;">No me ha llegado el mail de confirmación:</b></br></br>
            Da click en el link <b style="font-size: 14px;"><%= link_to "Confirma tu cuenta", new_unlock_path(resource_name) %></b> te enviará a una pantalla que te pedirá tu email para que te volvamos a enviar los datos de confirmación.
        </div>
            
		<div style="width: 315px; height: 120px; text-shadow:none; float: right;">
           <b style="font-size:15px; color:#000; clear: both;">Confirmé mi email pero olvide cambiar mi contraseña:</b></br></br>
            Cualquier problema con la contraseña puedes resolverlo dando click en <%=link_to "Olvidé mi contraseña", new_user_password_path %> donde se te enviará un mail para que puedas cambiar tu contraseña.
        </div>
            
    </div>
	
  </div><!-- ends Register_Singin -->
  

    <script>
            $('#linked').click(function() {
              $('#sub_linked').animate( {marginTop: "0px"} );
            });
			$('#Closelinked').click(function() {
              $('#sub_linked').animate( {marginTop: "400px"} );
            });
    </script>
  
</div>

<!--sirve para colocar la ayuda express a antiguos usuarios-->

<%= render "devise/shared/footer-links" %>
<%end%>
