<% if current_network.nil? %>
  <%= render partial: "/shared/sessions/network_not_exist" %>
<% else %>
  <div class="user-sessions-wrap user-sessions-medium">
    <%= render partial: "shared/sessions/network_box_head", locals: { sign_up: false, sign_in: false } %>
    <div class="user-sessions-main">
      <div class="user-session-content">
      	<h4>No has recibido confirmación</h4>
      	<p>Por favor, ingresa tu correo en el campo de abajo para dar seguimiento a tu solicitud</p><br>
  				
  			<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => "new-cofirmation-mail-form" }) do |f| %>
  			  <%= devise_error_messages! %>

  			  <div class="form-group no-label">
            <div class="form-group-main">
              <span class="input-icon session-icon-input">
                <%= icon('email') %>
                <%= f.email_field :email, :placeholder => "Correo electrónico", required: "required", autocomplete: "off" %>
              </span>
            </div>
          </div>

          <div class="user-sessions-footer">
            <div class="fr">
              <span class="btn btn-primary btn-medium input-btn">
                <%= f.submit "Reenviar instrucciones" %>
              </span>
            </div>
          </div>

  			<% end %>

      </div>

      <div class="user-session-links">
  	    <%= render partial: 'devise/shared/links', locals: { login: true, signup: true, password: true, confirmation: false, unlock: true } %>
  	  </div>

    </div>
  </div>

  <script>
    $(function() {
      $('.new-cofirmation-mail-form').validate();
    });
  </script>
<% end %>