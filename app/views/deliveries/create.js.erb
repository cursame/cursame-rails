<% if !@error_course && !@error_evaluation_period && !@error_link_to_bit %>

  $('#timeline').prepend('<%= escape_javascript(render( :partial => "/shared/posts/posts_list", :locals => {:wall => @publication, :visible_for => "network"} ))%>');
  Notice('success', I18n.t("deliveries.correct_create", {locale: "<%= I18n.locale %>"}));
  newPublicationCleaner();

<% elsif @error_course %>

  Notice('error', I18n.t("deliveries.select_course", {locale: "<%= I18n.locale %>"}));

<% elsif @error_evaluation_period %>
  Notice('error', I18n.t("deliveries.select_evaluation_period", {locale: "<%= I18n.locale %>"}));
<% elsif @error_link_to_bit %>
  Notice('error', 'Ocurrio un error, no se pudo enviar la informaci√≥n a Bit.');
<% end %>
