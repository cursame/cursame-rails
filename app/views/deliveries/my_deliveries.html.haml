.section-header-wrap
  .wrapper
    .cols-12
      .col.col-12
        .col-inner
          .section-header
            .section-header-main
              .section-title
                = link_to icon('section-deliveries'), my_deliveries_path
                = link_to my_deliveries_path do
                  %h1 Tareas
              - unless current_user.courses.empty?
                = render partial: '/shared/publications-filter/filter_by_course_publications', locals: { type: 'tareas' }
            .page-sub-navigation
              - action = params[:action]
              %ul
                %li
                  = link_to "Por entregar", wall_filter_path(:typeforfilter => 'Delivery', :responds => 'false'), :remote => true, class: (action == 'my_deliveries' ? "active" : " ")
                %li
                  = link_to "Tareas entregadas", wall_filter_path(:typeforfilter => 'Delivery', :responds => 'true'), :remote => true, class: (action == 'all' ? "active" : " ")
.wrapper
  .cols-12
    .col.col-12
      .col-inner
        #timeline.tim
          = render :partial => "/shared/publications", :locals => {:wall => @wall, :visible_for => "network"}
        #paginate_wall{onclick: "PaginateINwall('/deliveries',2, #{@wall.total_pages})"}