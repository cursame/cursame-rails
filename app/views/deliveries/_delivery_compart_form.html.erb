<%if @count_course_iam_member_and_owner != 0%>
    <%= form_for(@delivery = Delivery.new, :remote => true ,:html => { :class => "default-form delivery-form"}) do |f| %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.text_field :title , :placeholder=>'Titulo de la tarea' %>
        <%= f.text_field :end_date, :placeholder=>'Fecha de entrega', :class=>"date-input delivery" %>
        <%= f.text_field :publish_date, :placeholder=>'Día de pubicación', :class=>"date-input delivery" %>
        <%= f.text_area :description , :rows => 4, :cols => 76 , :placeholder=>'Descripción' %>
              <% 1.times do
                 areas_of_evaluations = @delivery.areas_of_evaluations.build
             end%>

        <%= f.fields_for :areas_of_evaluations do |builder| %>
            <%= render :partial => "areas_of_evaluations/form", :locals => { :f => builder } %>
        <% end %>

        <%= f.number_field :porcent_of_evaluation, :placeholder=>'Eval.', :class=>"percent-input" %>
             
              <% 1.times do
              
              assets = @delivery.assets.build
                 @asset = Asset.new
                 end   %>
              
        <%= f.fields_for :assets do |asset| %>
            <%= render :partial => "shared/assets_form", :locals => { :f => asset } %>
        <%end%>
        <div class="submit-area"></div>
        <%= button_tag "Cancel", :type => 'button', :class=>'input-button', :id => 'cancel-post-form', :onClick=>'removeSliderEvaluation();' %>
        <%= f.submit "Publicar"%>

        <div id="CourseDropDown" class="wrapper-dropdown"><span>Publicar...</span><div class="box-arrow"></div>
          <ul class="dropdown">
            <div id="box-selector-dd" style="display: block;">
                <li><label id="icon-dd-world" class="world-dd">Publico</label></li>
                <li><label id="icon-dd-course" class="course-dd">Cursos</label></li>
            </div>
            <div id="box-course-dd" style="display: none;">
            <% for course in Course.find(:all) %>
                <% @course_member = MembersInCourse.find_by_course_id_and_user_id(course.id, current_user.id) %>
                <% if !@course_member.nil?%>
                    <% if @course_member.owner == true && course.id == @course_member.course_id %>
                        <li><%= check_box_tag 'delivery[course_ids][]', course.id, false %><label for="delivery[course_ids][]"><%= course.title %></label></li>
                    <%end%>
                <%end%>
            <% end %>
              <li><label id="box-return-dd" class="return-dd">Volver</label></li>
            </div>
          </ul>
        </div>



        <script type="text/javascript">
        $(document).ready(function() {
            $( "#delivery_publish_date, #delivery_end_date" ).datepicker({
                inline: false,
                minDate: 0,
                showOtherMonths: true,
                monthNames: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio','Julio', 'Augosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
                dayNamesMin: ['Dom', 'Lun', 'Mar', 'Mie', 'Jue', 'Vie', 'Sab']
            });
            var dd = new DropDown( $('#CourseDropDown') );

            $('#icon-dd-course').click(function() {
                $('#box-selector-dd').hide();
                $('#box-course-dd').show();
            });

            $('#box-return-dd').click(function() {
                //console.log('entro');
                $('#box-selector-dd').show();
                $('#box-course-dd').hide();
            });
        });
      </script>
    <% end %>
<%end%>