.sections-header-wrap
  .wrapper
    .cols-12
      .col.col-12
        .col-inner
          .section-header
            .section-header-main
              .section-title
                %h5= t('.hmwrks')
                = link_to deliveries_course_path(course) do
                  %h1= truncate(course.title, :omission => "...", :length => 30)
              - unless current_user.courses.empty?
                = render partial: '/deliveries/shared/deliveries_filter_course'
            .page-sub-navigation
              - action = params[:action]
              %ul
                %li= link_to t('.active'), deliveries_course_path(course), class: ((action == 'deliveries_course' || action == 'course') ? "active" : " ")
                %li= link_to t('.last'), deliveries_course_lapsed_path(course), class: active_class('deliveries_course_lapsed')