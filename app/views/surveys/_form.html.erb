<%= form_for (@survey = Survey.new), :html => { :class => "default-form survey-form"} do |f| %>
    <%= f.text_field :name, :placeholder=>'Titulo del cuestionario', :class=>'title-txt-input' %>

  <%= f.fields_for :questions do |builder| %>
    <%= render "/surveys/question_fields", :f => builder %>
  <% end %>
  <p><%= link_to_add_fields "Agregar pregunta", f, :questions, :class=>'a-btn' %></p>
  <p><%= f.submit %></p>
<% end %>