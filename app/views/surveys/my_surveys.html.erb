<div class="section-header">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="section-header-content">
            <div class="section-header-title w-subnav">
              <div class="section-icon">
                <%= icon('section-surveys') %>
              </div>
              <div class="section-title">
                <h1>Cuestionarios</h1>
                <ul class="section-subnav">
                  <li class="active">
                    <%= link_to "Por contestar", wall_filter_path(:typeforfilter => 'Survey', :responds => 'false'), :remote => true %>
                  </li>
                  <li>
                    <%= link_to "Cuestionarios contestados", wall_filter_path(:typeforfilter => 'Survey', :responds => 'true'), :remote => true %>
                  </li>
                </ul>
              </div>
            </div>
            <% unless current_user.courses.empty? %>
              <%= render partial: '/shared/publications-filter/filter_by_course_publications', locals: { type: 'cuestionarios' } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="wrapper sc-margined">
  <div class="cols-12">
    <div class="col col-12">
      <div class="col-inner">
        <div id="timeline" class="tim">
          <% unless @wall.empty? %>
            <%= render :partial => "/shared/publications", :locals => {:wall => @wall, :visible_for => "network"} %>
          <% else %>
            <div class="no-content-section">
              <h4>No tienes cuestionarios por contestar.</h4>
            </div>
          <% end %>
        </div>
        <div id="paginate_wall" onclick="PaginateINwall('/all_surveys',2, <%= @wall.total_pages %>)"></div>
      </div>
    </div>
  </div>
</div>