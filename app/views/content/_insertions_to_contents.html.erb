<% if type.contents.count > 0 %>
<%#=type.contents.count %>
<div class="contents_title"> 
<div class="conetiner_manager_content_bar">
    <div id="parcer<%=type.id%>_<%=cl%>" style="margin-top:10px; margin-left:5px;"></div>

     <% type.contents.each do |content|%>
     
      <script>
            var aaaa;
                aaaa="<%= content.content %>";
                   //aaaa="http://somesite.se/blah/sese";
                   var matches = aaaa.match(/:\/\/(?:www\.)?(.[^/]+)(.*)/);
                   var lof = matches[1];
                 switch(lof){
                   
                     case 'dropbox.com': 
                      $('#parcer<%=type.id%>_<%=cl%>').prepend('<a class="link_cto_content_macher" id="content<%=content.id%>"><%= image_tag("dropbox-mini2.png") %></a>');
                     break;
                     
                     case 'youtube.com':
                       $('#parcer<%=type.id%>_<%=cl%>').prepend('<a class="link_cto_content_macher" id="content<%=content.id%>"> <%= image_tag("youtube-mini2.png") %></a>');
                     break;
                     
                      case 'es.wikipedia.org': 
                      $('#parcer<%=type.id%>_<%=cl%>').prepend('<a class="link_cto_content_macher" id="content<%=content.id%>"><%= image_tag("wikipedia-mini2.png") %></a>');                        
                      break;
                     
                     
                     
                     
                 };
                 
            
      </script>
     
      
     
      <% @html_content = "#{content.content_html}".split("\n")%>
      <% @ht_lnon =  @html_content[0].html_safe if  (@html_content[0] != nil)%>
      <SCRIPT LANGUAGE="JavaScript">
         
                     $('#content<%=content.id%>').click(function(e) {
                 	          $('#content_html<%=content.id%>').lightbox_me({
                 	              centered: true, 
                 	              onLoad: function() { 
                 	                  $('#content_html<%=content.id%>').find('input:first').focus()
                 	                  }
                 	                  
                 	              });
                 	          e.preventDefault();
                 	          
                 	          var aaaa;
           	                   aaaa="<%= content.content %>";
                                  //aaaa="http://somesite.se/blah/sese";
                                  var matches = aaaa.match(/:\/\/(?:www\.)?(.[^/]+)(.*)/);

                                  switch(matches[1]){
                                      case 'es.wikipedia.org':
                                       $("#refert<%=content.id%>").html('<iframe src="<%=content.content%>#content" style="width:800px; height:340px; padding:10px; overflow-x: hidden;margin-left:20px;"></iframe>');
                                      break;

                                      case 'dropbox.com': 
                                       var str = '<div style="margin-top:70px; font-size:35px;"><%=  @ht_lnon %></div>';
                                      
                                        $("#refert<%=content.id%>").html(str);
                                        
                                      break;


                                      case 'youtube.com':
                                      var str = '<%=  @ht_lnon %>';
                                         $("#refert<%=content.id%>").html(str);
                                      break;

                                  }
                 	      });
                    
     </SCRIPT>
      <div id="content_html<%=content.id%>" class="content_f_box"  style="display:none">
             <div><a id="close_x" class="close close_l" href="#" style="margin-top:-20px;"><center>x</center></a></div>
     	    <center>
     	        <div id="refert<%=content.id%>"></div>
            </center>
      </div>
     <%end%>

</div>
</div>
<%end%>