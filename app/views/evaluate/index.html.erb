<%= render partial: 'evaluate/shared/header_evaluate' %>

<div class="activities-section">
	<div class="wrapper">
		<div class="cols-12">
			<div class="col col-12">
				<div class="col-inner">
					<div class="section-separator">
						<div class="section-separator-title">
							<h6>Actividades para calificar hoy</h6>
							<i class="tip"></i>
						</div>
					</div>
					<div class="activities-list-section">
						<% unless @today_activities.empty? %>
							<%= render partial: 'evaluate/shared/activities_list', locals: { activities: @today_activities } %>
						<% else %>
							<div class="no-content-section">
				        <h4>Aún no tienes calificaciones.</h4>
				        <p>Necesitas estar inscrito en al menos un curso para tener calificaiones.</p>
				      </div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

