<%= render partial: 'evaluate/shared/header_evaluate_course', locals: { course: @course } %>

<% unless @today_activities.empty? %>
<div class="activities-section">
	<div class="wrapper">
		<div class="cols-12">
			<div class="col col-12">
				<div class="col-inner">
					<div class="section-separator">
						<div class="section-separator-title">
							<h6><%=t('.activity')%></h6>
							<i class="tip"></i>
						</div>
					</div>
					<div class="activities-list-section">
						<%= render partial: 'evaluate/shared/activities_list', locals: { activities: @today_activities } %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>

<% unless @tomorrow_activities.empty? %>
<div class="activities-section">
	<div class="wrapper">
		<div class="cols-12">
			<div class="col col-12">
				<div class="col-inner">
					<div class="section-separator">
						<div class="section-separator-title">
							<h6><%=t('.activity_for_tmrw')%></h6>
							<i class="tip"></i>
						</div>
					</div>
					<div class="activities-list-section">
						<%= render partial: 'evaluate/shared/activities_list', locals: { activities: @tomorrow_activities } %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>

<% unless @rest_of_activities.empty? %>
<div class="activities-section">
	<div class="wrapper">
		<div class="cols-12">
			<div class="col col-12">
				<div class="col-inner">
					<div class="section-separator">
						<div class="section-separator-title">
							<h6><%=t('.activity_for_days')%></h6>
							<i class="tip"></i>
						</div>
					</div>
					<div class="activities-list-section">
						<%= render partial: 'evaluate/shared/activities_list', locals: { activities: @rest_of_activities } %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>

<% if @rest_of_activities.count + @tomorrow_activities.count + @today_activities.count == 0 %>
	<div class="no-content-section">
    <h4><%=t('.no_activity')%></h4>
    <p><%=t('.all')%> <%= link_to (t('.past_activity'), evaluate_course_inactive_path(@course)) %>.</p>
  </div>	
<% end %>