<%= render partial: 'evaluate/shared/header_evaluate' %>
<% unless @activities.empty? %>
	<div class="activities-section">
		<div class="wrapper">
			<div class="cols-12">
				<div class="col col-12">
					<div class="col-inner">
						<div class="activities-list-section">
							<%= render partial: 'evaluate/shared/activities_list', locals: { activities: @activities } %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
<% else %>
	<div class="no-content-section">
	  <h4><%=t('.no_activity')%></h4>
	  <p><%=t('.no_act')%></p>
	</div>
<% end %>