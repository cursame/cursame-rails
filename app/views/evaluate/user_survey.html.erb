<div class="delivery-submited-content">
  <div>
    <span class="meta-info">Alumno:</span>
    <p><%= link_to @user_survey.user.name, show_user_path(@user_survey.user.personal_url) %></p>
  </div>
  <div>
    <span class="meta-info">Resultado obtenido:</span>
    <p><%= number_with_precision(@user_survey.evaluation, :precision => 2)%></p>
  </div>
</div>

<div class="delivery-submited-evaluation-fields">
	<ul class="survey-items-list">
	<% @user_survey.user_survey_responses.each do |r| %>
		<% @question = Question.find(r.question_id) %>
		<% @answer = Answer.find(r.answer_id) %>
		<li>
			<div class="survey-item">
				<div class="survey-item-question">
					<p><%= @question.content%></p>			
				</div>
				<div class="survey-item-answers">
					<span class="meta-info">Respuesta:</span>
          <div class="survey-item-answer-content">
            <% if  @answer.correct == true %> 
              <%= image_tag('icons/icon_true.png')%>
            <%else%>
              <%= image_tag('icons/icon_false.png')%>
            <%end%>
            <p><%= @answer.content %></p>
          </div>
				</div>
			</div>
		</li>
	<% end %>
	<form action="">
		<textarea placeholder="feedback" name="" id="" cols="30" rows="10"></textarea>
		<input type="submit" value="Enviar">
	</form>
	</ul>
</div>
