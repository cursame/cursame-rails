<% activities.each do |activity| %>
  <% course = activity.courses.first %>
  <% activity_type = activity.class.to_s.downcase %>
  <% case activity_type %>
  <% when 'survey' %>
    <%= render partial: 'evaluate/shared/survey_activity', locals: { activity: activity, course: course } %>
  <% when 'delivery' %>
    <%= render partial: 'evaluate/shared/delivery_activity', locals: { activity: activity, course: course } %>
  <% when 'discussion' %>
    <%= render partial: 'evaluate/shared/discussion_activity', locals: { activity: activity, course: course } %>
  <% end %>
<% end %>