<% 
  set_meta_tags description: 'Plataforma educativa que conecta alumnos, profesores y directivos de una misma institución.',
  keywords: 'escuela, linea, educacion, lms, e-learning, cursame',
  og: {
    title: 'Cúrsame',
    description: 'Plataforma educativa que conecta alumnos, profesores y directivos de una misma institución.',
    image: 'http://cursa.me/images/website/og-landing.png',
    url: 'http://cursa.me/'
  }
%>
<% content_for :javascripts do  %>
<%= javascript_include_tag('website/home') %>
<% end %>

<div class="intro-homepage-hidden">
  <div class="intro-homepage intro-page intro-main">
    <div class="wrapper">
      <div class="cols-12">
        <div class="col col-7">
          <div class="col-inner">
            <div class="section-title">
              <h1><%= t('.intro_homepage_hidden.title1') %></h1>
              <br>
              <p><%= t('.intro_homepage_hidden.text1') %></p>
              <br>
              <div class="intro-actions">
                 <ul class="list-buttons left">
                  <li>
                    <%= link_to t('.intro_homepage_hidden.request_demo'), request_demo_path, class: 'btn btn-large btn-complementary hard-border-btn' %>
                  </li>
                  <li>
                    <%= link_to image_tag('/images/website/play.png'),
                      landing_intro_video_modal_path,
                      class: "landing-play-video",
                      data: { modal: "true" } %>
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="col col-5">
          <div class="col-inner">
            <div class="homepage-laptop">
              <%= image_tag "/images/website/laptop.png" %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="features-showcase wrapper">
  <div class="cols-12">
    <div class="col col-4">
      <div class="col-inner">
        <%= icon('happy-face') %>
