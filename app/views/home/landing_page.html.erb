    </div>
    <div class="col col-4">
      <div class="col-inner">
        <%= icon('multi-platform') %>
        <h4><%= t('.features_showcase.title3') %></h4>
        <p><%= t('.features_showcase.text3') %></p>
      </div>
    </div>
  </div>

  <div class="cols-12 view-more-features">
    <div class="col col-12">
      <div class="col-inner">
        <%= link_to (t('.features_showcase.features_path') << " &#8594;").html_safe, features_path %>
      </div>
    </div>
  </div>
</div>

