<% 
  set_meta_tags title: 'Solicitar Demo',
                description: 'Un asesor especializado visitará tu plantel para demostrar la plataforma y resolver todas tus dudas.',
                keywords: 'cursame, demo, demostracion, muestra, contacto',
                og: {
                  title: 'Solicitar Demo · Cúrsame',
                  description: 'Un asesor especializado visitará tu plantel para demostrar la plataforma y resolver todas tus dudas.',
                  image: 'http://cursa.me/images/website/request-demo-title.jpg',
                  url: 'http://cursa.me/request-demo'
                }
%>
<div class="request-demo-title intro-title-page intro-page">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-8">
        <div class="col-inner">
          <div class="section-title">
            <h1><%= t('.title') %></h1>
            <p><%= t('.text1') %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="contact-page wrapper">
  <div class="cols-12">
    <div class="col col-9">
      <div class="col-inner">
        <div class="form-contact">
          <p><%= t('.text2') %> <br><%= t('.text3') %> (<span class="required">*</span>) <%= t('.text4') %></p>
          <%= render partial: 'shared/website/contact_form', locals: { contact_type: 'demo_request', lading_page_id: false } %>

        </div>
      </div>
    </div>
    <div class="col col-3">
      <div class="col-inner">
        <%= render partial: 'shared/website/other_contact_ways' %>
      </div>
    </div>
  </div>
</div>

<div class="website-separator"></div>
<%= render partial: "shared/website/sponsors" %>

<script>
  $(function() {
    $('.contact-form').validate();
  });
</script>