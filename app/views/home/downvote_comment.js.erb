var comment = $('[data-child-comment-id="<%= @publication.id%>"]'),
    voteLinkMeta = comment.find('a.vote-child-comment-js'),
    votesCountMeta = comment.find('.votes-count-child-comment-js');

voteLinkMeta.attr('href', '<%= escape_javascript(upvote_comment_path(@publication.id)) %>');
voteLinkMeta.text(I18n.t("home.like", {locale: "<%= I18n.locale %>"}));

votesCountMeta.html('<%= escape_javascript( render( partial: "comments/shared/child_comment_votes_count", locals: { comment: @publication } ) ) %>');
