<% if @comment.commentable_type == 'Comment' %>
// si se tiene que agregar a nivel de los coments
	// var node = $('#comment_<%= @comment.commentable.id %>').closest('.media-body').children(':last-child')
	// 	.before('<%= escape_javascript(render(:partial => 'shared/comment', :locals => {:comment => @comment}))%>');
	$('#comments-comment-<%= @comment.commentable.id %>').append('<%= escape_javascript(render(:partial => 'shared/comment', :locals => {:comment => @comment}))%>');
	$('#comment_for_<%= @comment.commentable_type+@comment.commentable_id.to_s %>').val('');
<% else %>
	// si se tiene que agregar al layout principal
	// $('#comentable_<%= @comment.commentable.id %>').prepend('<%= escape_javascript(render(:partial => 'shared/comments', :locals => {:comment => @comment}))%>');
	$('#timeline').prepend('<%= escape_javascript(render(:partial => 'shared/comments', :locals => {:comment => @comment}))%>');
	$('#comment_<%= @comment.id %>').effect("highlight", {}, 1000);;
<% end %>
