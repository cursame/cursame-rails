<% @active_edit = true %>

$('#<%= "#{@type}_id_#{@id}"%>_contribution').html('');

<% case %>
  <% when @type == "Delivery" %>   
    $('#<%= "#{@type}_id_#{@id}"%>_contribution').
    html('<%= escape_javascript(render(:partial => '/deliveries/delivery_compart_form', :locals => {:delivery => @delivery, :active_edit => @active_edit })) %>');

  <% when @type == "Survey" %>
     $('#<%= "#{@type}_id_#{@id}"%>_contribution').
     html('<%= escape_javascript(render(:partial => '/surveys/form', :locals => {:survey => @survey, :active_edit => @active_edit })) %>');

  <% when @type == "Comment"%>
    $('#<%= "#{@type}_id_#{@id}"%>_contribution').
    html('<%= escape_javascript(render(:partial => 'shared/comment_form', :locals => {:commentable_id => @commentable_id, :commentable_type => @commentable_type, :comment_id => @comment.id, :comment => @comment.comment, :message => '', :active_edit => @active_edit})) %>');

  <% when @type == "Discussion"%>
     $('#<%= "#{@type}_id_#{@id}"%>_contribution').
     html('<%= escape_javascript(render(:partial => 'discussions/form_for_discussion', :locals => {:discussion => @discussion, :active_edit => @active_edit })) %>');
<%end%>

