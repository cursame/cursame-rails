<div class="about-title intro-title-page intro-page">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="section-title">
            <h1><%= t('.about_title.title') %></h1>
            <p><%= t('.about_title.text1') %></p>
            <p><%= t('.about_title.text2') %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="wrapper">
  <div class="cols-12 about-txt">
    <div class="col col-2">
      <div class="col-inner">
        <h3><%= icon 'vision' %><%= t('.vision') %></h3>
      </div>
    </div>
    <div class="col col-10">
      <div class="col-inner">
        <p><%= t('.description_vision') %></p>
      </div>
    </div>
  </div>
  <div class="cols-12 about-txt">
    <div class="col col-2">
      <div class="col-inner">
        <h3><%= icon 'mision' %><%= t('.mission') %></h3>
      </div>
    </div>
    <div class="col col-10">
      <div class="col-inner">
        <p><%= t('.description1_mission') %></p>

        <p><%= t('.description2_mission') %></p>
      </div>
    </div>
  </div>
  <div class="cols-12 about-txt">
    <div class="col col-2">
      <div class="col-inner">
        <h3><%= icon 'philosophy' %><%= t('.philosophy') %></h3>
      </div>
    </div>
    <div class="col col-10">
      <div class="col-inner">
        <p><%= t('.description1_philosophy') %></p>

        <p><%= t('.description2_philosophy') %></p>
      </div>
    </div>
  </div>
  <div class="cols-12 about-txt">
    <div class="col col-2">
      <div class="col-inner">
        <h3><%= icon 'objectives' %><%= t('.objectives') %></h3>
      </div>
    </div>
    <div class="col col-10">
      <div class="col-inner">
        <ul class="list">
          <li>
            <%= t('.description1_objetives') %>
