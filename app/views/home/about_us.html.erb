          <li>
            <%= t('.description2_objetives') %>
          </li>
          <li>
            <%= t('.description3_objetives') %>
          </li>
          <li>
            <%= t('.description4_objetives') %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

