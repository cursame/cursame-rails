<form action="<%= user_session_path %>"  class="form-signin" method="post">
  <h2 class="form-signin-heading">Please sign in</h2>
  <input type="text" name="user[email]"  class="input-block-level" placeholder="Email address">
  <input type="password" name="user[password]" class="input-block-level" placeholder="Password">
  <label class="checkbox">
    <input type="checkbox" name="user[remember_me]" value="remember-me"> Remember me
  </label>
  <button class="btn btn-large btn-primary" type="submit">Sign in</button>
  <%= link_to "Sign up", new_user_session_path %>
</form>