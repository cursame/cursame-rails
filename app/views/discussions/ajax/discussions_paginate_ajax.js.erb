var content = '<%= escape_javascript( render( partial: "discussions/shared/discussions_list", locals: { discussions: @discussions } ) )%>';
$('div.academic-activities-main .cols-12').append( content );

<% if @discussions.current_page < @discussions.num_pages %>
	var loadMoreContent = '<%= escape_javascript( render( partial: "discussions/shared/discussions_paginate_button", locals: { page: @next_page, type: @type, course: @course }) )%>';
	$('div.load-more').html( loadMoreContent );
<% else %>
	var message = '<%= escape_javascript( render( partial: "shared/no_more_records_found", locals: { message: t('.no_more_records_found') } ) )%>';
	$('div.load-more div.col-inner').html( message )
<% end %>
