<%= form_for(@discussion=Discussion.new, :remote => true,:html => { :class => "default-form discussion-form" }) do |f| %>
 
  <% if @discussion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@discussion.errors.count, "error") %> prohibited this discussion from being saved:</h2>

      <ul>
      <% @discussion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="video_help" style="display: none" id="discussion_help">
         <div class="content_video" id="content_video_video_discussion">

         </div>
     </div>
    <%= f.text_field :title, :placeholder=>'Titulo de la Discusión' %>
    <%= f.text_area :description , :placeholder=>'Descripción', :rows => 4, :cols => 76 %>

    <div class="submit-area"></div>
    <%= button_tag "Cancel", :type => 'button', :class=>'input-button', :id => 'cancel-post-form', :onClick=>'removeSliderEvaluation();' %>
    <%= f.submit "Crear Discusión", :id => 'comment-post-form' %>
    <%= render :partial => "shared/dropdown", :locals => { :hasPublic => true, :hasCourses => true, :hasGroups => true, :hasUser => true,:defaultText => 'Pública', :defaultClass => 'public-dd' } %>
    <a class="help discussion_help" id="help_discussion"><%= image_tag('help.png')%></a>
       <script>
                $('#help_discussion').click(function() {
                    $('#discussion_help').toggle('blind', 400);
                    if($("#discussion_help").css( 'visibility')=="hidden"){
                           $('#content_video_video_discussion').html('');
                       }
                       else{
                          $('#content_video_video_discussion').html('<object width="560" height="280" ><param name="movie" value="http://www.youtube.com/v/gudXW66O9OM?hl=es_ES&amp;version=3"></param><param name="allowFullScreen" value="true"></param><param name="allowscriptaccess" value="always"></param><embed src="http://www.youtube.com/v/gudXW66O9OM?hl=es_ES&amp;version=3" type="application/x-shockwave-flash" width="560" height="280" allowscriptaccess="always" allowfullscreen="true"></embed></object>');
                       }
                   });                         

       </script>
<% end %>
