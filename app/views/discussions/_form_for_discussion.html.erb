<% if @active_edit == false %>
  <% @discussion=Discussion.new %>
   <a class="help discussion_help" id="help_discussion" style="margin-top:-25px; margin-right:565px;" ><%= image_tag('help.png')%></a>
<% end %>
<%= form_for(@discussion, :remote => true,:html => { :class => "default-form discussion-form" }) do |f| %>
 
  <% if @discussion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@discussion.errors.count, "error") %> prohibited this discussion from being saved:</h2>

      <ul>
      <% @discussion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="video_help" style="display: none" id="discussion_help">
         <div class="content_video" id="content_video_video_discussion">

         </div>
     </div>
     <% 1.times do
               contents = @discussion.contents.build
      end%>
     <!--este render trae el header de contenidos--> 
     <% if @active_edit == false %>
        
     <%= render :partial => "content/heather_contents", :locals => {:f => f, :typeo => 'discussion', :acces_to => @discussion, :contents => "contents"}%>
     
     <%end%>
     
    <%= f.text_field :title, :style =>'outline-width: 0px;', :placeholder=>'Titulo de la Discusión', :minlength=>"2" %>
    <%= f.text_area :description , :style =>'outline-width: 0px;', :placeholder=>'Descripción', :rows => 4, :cols => 81, :class => 'border_for_text'%>  
    
    <% if @active_edit == false %>
    
    <div style="float:right;margin-right:590px;width:50px; height:30px; position:relative; margin-top:-110px;">
             <%= render partial: 'content/list', :locals => {:typeo => 'discussion'} %>
    </div>
    
    <%end%>
    
    <div class="submit-area"></div>
     <% if @active_edit == false %>
     
    <%= button_tag "Cancel", :type => 'button', :class=>'input-button cancel-post-form_tab', :id => 'cancel-post-form_tab', :onClick=>'removeSliderEvaluation();' %>
    <%= f.submit "Crear Discusión", :id => 'comment-post-form' %>
    <%else%>
    <%= f.submit "Guardar discussion",  :class => "btn activable" %>
    
    <%end%>
     <div style="margin:10px;">
    <% if @incourse != true%>
    <%= render :partial => "shared/dropdown", :locals => { :hasPublic => true, :hasCourses => true, :hasGroups => true, :hasUser => true,:defaultText => 'Pública', :defaultClass => 'public-dd' } %>
    <%else%>
       <% 1.times do
           courses = @discussion.courses.build
       end%>
       
       <%=  hidden_field_tag "delivery[course_ids][]", @course.id %>
       
       <script>
         $(document).ready(function(){
         $('#help_discussion').css('margin-top','10px');
         $('#discussion_description').attr("placeholder","Coloca una discusión en este curso.");
         
         });
       </script>
    <%end%>
    </div>
    
   
	
    
       <script>
                $('#help_discussion').click(function() {
                    $('#discussion_help').toggle('blind', 400);
                    if($("#discussion_help").css( 'visibility')=="hidden"){
                           $('#content_video_video_discussion').html('');
                       }
                       else{
                          $('#content_video_video_discussion').html('<object width="560" height="280"><param name="movie" value="http://www.youtube.com/v/ODXlUmdEmeI?version=3&amp;hl=es_ES&amp;rel=0"></param><param name="allowFullScreen" value="true"></param><param name="allowscriptaccess" value="always"></param><embed src="http://www.youtube.com/v/ODXlUmdEmeI?version=3&amp;hl=es_ES&amp;rel=0" type="application/x-shockwave-flash" width="560" height="280" allowscriptaccess="always" allowfullscreen="true"></embed></object>');
                       }
                   }); 
                   $().ready(function() {
                      $('#new_discussion').validate();
                   });                                           

       </script>
<% end %>
