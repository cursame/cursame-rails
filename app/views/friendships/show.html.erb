<p id="notice"><%= notice %></p>

<p>
  <b> <h3><%=@user.email%> Friendship List: </h3></b>
</p>

<p>
  <b>Accepted Friends:</b>
  <p>

  <%@all_friends.each do |hash|%>
    <%if (hash[:accepted]) then%>
      <tr>
        <td>
            <%= link_to hash[:user].to_s, show_user_path(hash[:user])%>
            <%= link_to "Remove", {:controller => "friendships", :action => "destroy", :friend_id => hash[:user].id}, :method => :delete%>
       </td>
      </tr>
      <p>
    <%end%>
  <%end%>
   <p>
   <b>Non Accepted Friends:</b>
   <p>

   <%@all_friends.each do |hash|%>
    <%if !(hash[:accepted]) then%>
      <tr>
        <td>
            <%= link_to hash[:user].to_s, show_user_path(hash[:user].personal_url)%>
            <%= link_to "Accept Request", {:controller => "friendships", :action => "update", :friend_id => hash[:user].id}, :method => :update%>
       </td>
      </tr>
      <p>
   <%end%>
   <%end%>
</p>

<p> <%= link_to "Profile", show_user_path%>
<p> <%= link_to "New Friends", new_friends_path%>

