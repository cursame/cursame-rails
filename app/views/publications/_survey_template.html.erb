
<% @survey = @publication.publication %>
<%= form_tag "/surveys/survey_reply", :remote =>true do %>
  <p>
    <%= @survey.name %><br />
    <%= hidden_field_tag 'survey_id', @survey.id%>
    <br />
     <% for course in @survey.courses %>
        <%= course.title %><br />
     <% end %>
  </p>
  <% for question in @survey.questions %>
  <p>
    <%= question.content%><br />
    <b>archivo</b>
  </p>
    <% for answer in question.answers %>
      <%= answer.content %>
      <%= check_box_tag "questions["+question.id.to_s+"][]", answer.id %><br />
    <% end %>  
  <% end %>
  <%= submit_tag "Contestar",:class=>"btn btn-primary" %>
<% end %>