<div class="form-course"><!-- estilo en courses.scss -->
	<div style="width:400px; float:left;">
<%= form_for(@network, :remote => true) do |f| %>
  <% if @network.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@network.errors.count, "error") %> prohibited this network from being saved:</h2>

      <ul>
      <% @network.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field-style">
    <p><%= f.label :nombre %><p/>
    <%= f.text_field :name, :class=> "default-form" %>
  </div>
  <div class="field">
    <p><%= f.label :subdominio %></p>
    <%= f.text_field :subdomain, :class=>"default-form" %>
  </div>
  <div class="field">
     <p><%= f.label :Poblacion %></p>
     <%= f.text_field :population, :class=>"default-form" %>
   </div>
    
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
</div>