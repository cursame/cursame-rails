<!-- Content Post Box -->
<%#= debug network_member%>
<div id="box-content" class="profile-line">
  <!-- SideBar -->
  <div id="side-bar" class="side-left-bar" >
    <!-- User Avatar -->
    <div id="box-user-credential" class="network-layout">
      <div class="thumbnail"  >
        <%= link_to image_tag(current_user.avatar.blank? ? current_user.image_avatarx : current_user.avatar.profile, :whidth => '150px', :height => '150px'), show_user_path(current_user.personal_url) %>
      </div>
      <div class="tagname">
        <%= @user.name %>
      </div>
    </div>
   
    <div id="box-course" class="basic-lateral-box margin-top" >
      <%=render :partial => 'courses/courses.html.erb', :locals => {:courses => @courses} %>
    </div>

    <a class="help " id="help_courses"><%= image_tag('help.png')%></a>
       <script>
                $('#help_courses').click(function() {
                    $('#courses_help').toggle('drop', 400);
                    if($("#courses_help").css( 'visibility')=="hidden"){
                           $('#content_video_video_courses').html('');
                       }
                       else{
                          $('#content_video_video_courses').html('<object width="260" height="200"><param name="movie" value="http://www.youtube.com/v/OBZwWue4NhQ?hl=es_ES&amp;version=3&amp;rel=0"></param><param name="allowFullScreen" value="true"></param><param name="allowscriptaccess" value="always"></param><embed src="http://www.youtube.com/v/OBZwWue4NhQ?hl=es_ES&amp;version=3&amp;rel=0" type="application/x-shockwave-flash" width="260" height="200" allowscriptaccess="always" allowfullscreen="true"></embed></object>');
                       }
                   });

       </script>

       <div class="video_help courses_help" style="display: none" id="courses_help">
              <div class="content_video" id="content_video_video_courses">

              </div>
       </div>


    <div class= "box-comments"></div>
    <div class="clear"></div>
    <div id="tabs-friends" class="tabs-style">
   <div id="box-friends" class="basic-lateral-box" >
    <h2><%= current_network.friends_tag %></h2>


    <div id="tabs-friends" class="tabs-style">
      <ul id="ul-tabs" class="tabs-friends-cc">
             <div class="element-left" style="width:100px!important;">
                  <a class="plus-courses" id="friend_solicitud" style='margin-left: 194px;' href="<%=show_friends_path(current_user.personal_url)%>"></div>
                      <script>
                          $(".tabs-friends-cc").hover(
                                   function () {
                                     $(this).append($("<span style='z-index:100000000000;position: absolute; margin-left:225px; float:left; margin-top:-30px'><div class='tooltipr'><%=truncate("Para ver las solicitudes de amistad da click en el boton azul de la derecha.", :omission => "...", :length => 155) %></div></span>"));
                                   },
                                   function () {
                                     $(this).find("span:last").remove();
                                   }
                          );
                      </script>
                    <% @friends = current_user.friendships.where(:accepted => true)%>
                    <% @inverse_friends = current_user.inverse_friendships.where(:accepted => true)%>
                    <% @sum_f =  @friends.count +  @inverse_friends.count %>
          <a href="#tabs-friends-1">
            <div class="content-tab">
              <span class="title-num"><%= @sum_f %></span>
              <span class="title"><%= current_network.friends_tag %></span>
            </div>
          </a>
        </li>
       <!--  <li class="element-right" style="width:130px!important;">
          <a href="#tabs-friends-2">
            <div class="content-tab">
              <span class="title-num">20</span>
              <span class="title">sugerencias</span> -->
            </div>
          </a>
        </li>
      </ul>
      <div id="tabs-friends-1">
        <div class="content-avtr">
              <% @friends.each do |friend|%>
              <%  @friend = friend.friend%>
              <div class="friend_id_tooltip<%=@friend.id%>" style="float:left;">
                   <%= link_to image_tag(@friend.avatar.blank? ? @friend.image_avatarxxx : @friend.avatar.modern, {:class => "avatar-mini"}), show_user_path(@friend.personal_url)%>
              </div>
              
              <script>
                     $(".friend_id_tooltip<%=@friend.id%>").hover(
                              function () {
                                $(this).append($("<span style='z-index:100000000000;position: absolute; margin-left:35px; float:left; margin-top:-50px'><div class='tooltipr'><%=truncate("#{@friend.name}", :omission => "...", :length => 155) if ( !@friend.name.blank?) %></div></span>"));
                              },
                              function () {
                                $(this).find("span:last").remove();
                              }
                     );
                </script>
              <%end %>
              <% @inverse_friends.each do |friend|%>
              <% @inverse_friend = friend.user%>
              <div class="friend_id_tooltip<%=@inverse_friend.id%>" style="float:left;">
              <%= link_to image_tag(@inverse_friend.avatar.blank? ? @inverse_friend.image_avatarxxx : @inverse_friend.avatar.modern, {:class => "avatar-mini"}), show_user_path(@inverse_friend.personal_url) if (@inverse_friend.avatar.blank?)%>
                 
              </div>
                 <script>
                       $(".friend_id_tooltip<%=@inverse_friend.id%>").hover(
                                function () {
                                  $(this).append($("<span style='z-index:100000000000;position: absolute; margin-left:35px; float:left; margin-top:-50px'><div class='tooltipr'><%=truncate("#{@inverse_friend.name}", :omission => "...", :length => 155) if ( !@inverse_friend.name.blank?) %></div></span>"));
                                },
                                function () {
                                  $(this).find("span:last").remove();
                                }
                       );
                  </script>
              <%end%>
        </div>
        
        
        
        <div class="view-all" id="comunidad_fgthk"><%= link_to "#{current_network.comunity_tag}", network_comunity_path %></div>
        
            <script>
                   $("#comunidad_fgthk").hover(
                        function () {
                          $(this).append($("<span style='z-index:100000000000;position: absolute; margin-left:-7px; float:left; margin-top:-5px'><div class='tooltipr'><%=truncate("Ver todos los miembros de la #{current_network.comunity_tag}.", :omission => "...", :length => 155) %></div></span>"));
                        },
                        function () {
                          $(this).find("span:last").remove();
                        }
                      );
                      
            </script>
      </div>
     
    </div>
  </div>
     <div class="video_help courses_help" style="display: none" id="friends_help">
            <div class="content_video" id="content_video_video_friends">

            </div>
     </div>
</div>

<!-- Content -->

<div id="box-stream-post">
    <div id="pk_menu">
    <%=render :partial => 'shared/post_menu' %>
    </div>
    <%=render :partial => 'shared/wall_filters', :locals => {:path => wall_path} %>

    <!-- timeline -->
    <div id="timeline" class="tim">
        <%= render :partial => "/shared/publications", :locals => {:wall => @wall, :visible_for => "network"} %>
    </div>
    <!-- fin timeline -->
  <!-- mostrar el password por primera vez -->
  <% if current_network.public_register == false%>
   <% if show_joyride(3) != "1"%>
    <%= render :partial => "/users/set_password_form", :locals => {:user => current_user} %>
      <script>
          modal("#set-password-form");
      </script>
    <% end %>
  <%end%>
  <!-- inicio de joyride -->
    <% if show_joyride(0) == "0"%>
      <%= render :partial => "/shared/network_joyride", :locals => {:wall => @wall,:visible_for => "network"} %>
    <% end %>
  <!-- fin de joyride -->

    <%= will_paginate(@wall) %>
</div>
</div>


<script type="text/javascript">
$(function() {
  var aux = <%= (@show_course_expired) || false %>;
  if(aux) {
    $('li.delivery').click();
  }

  var p = $('#timeline').pageless({
    totalPages: <%= @wall.total_pages %>,
    url: '<%= wall_path %>',
    loaderMsg: '...',
    onInit:function(opts){
      this.pageless = {
        opts : opts
      };
    },
    params:{
      search:''
    },
    loaderImage: '<%= image_path("load.gif")%>'
  });
});
</script>
