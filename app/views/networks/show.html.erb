<div id="box-content" class="wrapper spaced">
  <div id="box-stream-post">

    <div id="pk_menu">
      <%=render :partial => 'shared/post_menu' %>
    </div>
    
    <div id="timeline" class="tim">
      <%= render :partial => "/shared/publications", :locals => {:wall => @wall, :visible_for => "network"} %>
    </div>
    
    <% if current_network.public_register == false%>
      <% if show_joyride(3) != "1"%>
        <%= render :partial => "/users/set_password_form", :locals => {:user => current_user} %>
        
        <script>
          modal("#set-password-form");
        </script>
      <% end %>
    <%end%>

    <% if show_joyride(0) == "0"%>
      <%= render :partial => "/shared/network_joyride", :locals => {:wall => @wall,:visible_for => "network"} %>
    <% end %>

    <%= will_paginate(@wall) %>

  </div>
</div>

<script type="text/javascript">
$(function() {

  var aux = <%= (@show_course_expired) || false %>;
  
  if(aux) {
    $('li.delivery').click();
  }

  window.pagelessSettings = {
    url : '<%= wall_path %>',
    loaderImage : '<%= image_path("load.gif")%>'
  };

  $('#timeline').pageless({
    totalPages: 10,
    url: window.pagelessSettings.url,
    loader: "#loader-pagination",
    onInit:function(opts){
      this.pageless = {
        opts : opts
      };
    },
    params:{
      search:''
    },
    loaderImage: window.pagelessSettings.loaderImage,
    complete: function(e) {
      console.log(e);
    },
    end: function() {
      $('#timeline').append('<div class="no-more-publications"><h4>No hay publicaciones</h4></div>')
    }
  });
});
</script>
