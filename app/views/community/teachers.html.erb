<% content_for :javascripts do %>
<%= javascript_include_tag 'publications/paginator' %>
<% end %>

<%= render partial: 'community/shared/community_header' %>
<div class="wrapper">
	<% unless @teachers.empty? %>
	  <div class="cards-list">
	    <div class="cols-12">
	    	<%= render partial: 'users/shared/users_cards_list', locals: { users: @teachers } %>
	    </div>
	  </div>
	  <% if @teachers.total_entries > CARDS_PER_PAGE %>
			<%= render partial: 'community/shared/community_paginate_button', locals: { page: 2, role: 'teacher' } %>
		<% elsif @teachers.total_entries <= CARDS_PER_PAGE %>
			<%= render partial: "shared/no_more_records_found", locals: { message: "No hay más usuarios por mostrar.." } %>
		<% end %>
	<% else %>
	  <div class="no-content-section">
      <h4>Aún no hay profesores en tu red.</h4>
	  </div>
  <% end %>
</div>