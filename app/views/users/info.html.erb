<%= render partial: 'users/shared/user_profile_header' %>
<div class="wrapper">
  <div class="cols-12">
    <div class="col col-12">
      <div class="col-inner">
        <div class="sub-profile-title">
          <h3><%=t('.info2')%></h3>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="wrapper">
  <div class="cols-12">
    <div class="col col-8">
      <div class="col-inner">
        <div class="basic-container-style padded">
          <% if !@user_l.bios.blank? %>
            <h5><%=t('.bio')%></h5>
            <%= @user_l.bios %>
          <% else %>
            <p><%=t('.no_bio')%></p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col col-4">
      <div class="col-inner">
        <div class="basic-container-style padded course-info-blocks">
          <div class="course-info-block">
            <h6 class="meta-info"><%= icon('email-12') %> <%=t('.email')%>:</h6>
            <%= link_to @user_l.email, "mailto:#{@user_l.email}" %>

          </div>

          <% if !@user_l.twitter_link.blank? %>
            <div class="course-info-block">
              <h6 class="meta-info"><%= icon('twitter-12') %> Twitter:</h6>
              <%= link_to @user_l.twitter_link, @user_l.twitter_link, target: '_blank' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>