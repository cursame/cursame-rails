<div id="return-course" class="return-course-icon"></div>
<div class="title"><%=t('.create')%> <%= current_network.course_tag %></div>
<div class="ui-widget-overlay"><%=t('.load')%></div>
<%= javascript_include_tag('courses_validate_form.js') %>

<%= form_for(Course.new, :remote => true, :html => { :class => "default-form course-form"}) do |f|  %>
    <%= f.hidden_field :network_id, :value => current_network.id%>
    <%= f.text_field :title, :placeholder=>t('.name') %>
    <%= f.text_area :silabus, :rows => 3, :cols => 27 , :placeholder=>t('.descrip'), :class => 'border_for_text' %>
    <%= f.text_field :init_date, :placeholder=>t('.init_date'), :class=>"date-input" %>
    <%= f.select :public_status, options_for_select([[t('.private'), 'Private'],[t('.public'), 'public']])%>
    <%= f.submit t('.create2') , :class=>'input-button active', :id => 'create_course_form'%>
    <%= button_tag t('.cancel'), :type => 'button', :class=>'input-button', :id => 'cancel-course-form' %>
    <div style="clear: both"></div>
<% end %>


<script type="text/javascript">
    $(function() {
        $( "#course_init_date" ).datepicker({
            inline: true,
            minDate: 0,
            showOtherMonths: true,
            dateFormat: 'dd/mm/yy',
            monthNames: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio','Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
            dayNamesMin: ['Dom', 'Lun', 'Mar', 'Mie', 'Jue', 'Vie', 'Sab']
        });


    });
</script>

