<%if @page == 1 %>
	this.pageless.opts.currentPage = 1;
	this.pageless.opts.totalPages = <%= @wall.total_pages %>;
	this.pageless.opts.params = {
		search:'<%=@search%>'
	};

	this.pageless.opts.startListener();
	$('#timeline').html('<%= escape_javascript(render(:partial => '/shared/publications', :locals => {:wall => @wall, :visible_for => 'user'}))%>');
	$('#timeline').append(this.pageless.opts.loader);
<%else%>
	var element = '<%= escape_javascript(render(:partial => '/shared/publications', :locals => {:wall => @wall, :visible_for => 'user'}))%>';
	this.pageless.opts.loader ? this.pageless.opts.loader.before(element):$('#timeline').append(element);
<%end%>
